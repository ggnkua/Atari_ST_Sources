      ENDIF
      PRINT #2,CHR$(9)+CHAR{V:a$}+" = "+STR$(a&)+";"
      '      PRINT CHR$(9)+TRIM$(a$)+" = "+STR$(a&)+";"
      '     TEXT 100,100,CHAR{V:a$}
