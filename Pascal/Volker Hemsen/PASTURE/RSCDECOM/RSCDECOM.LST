> PROCEDURE read_dfn(pfad$)
  IF EXIST(pfad$)
    OPEN "i",#1,pfad$
    anz&=INP(#1)+SHL(INP(#1),8)
    FOR i&=0 TO PRED(anz&)
      oindex&=INP(#1)
      bindex&=INP(#1)
      typ&=INP(#1)
      btyp&=INP(#1)
      a$=STRING$(12,0)
      BGET #1,V:a$,10
      IF btyp&=0
        tree_label$(oindex&)=TRIM$(CHAR{V:a$})
        '        PRINT oindex&,tree_label$(oindex&)
      ENDIF
      '        PRINT TRIM$(a$)
      '     EXIT IF INP(2)=32
    NEXT i&
    CLOSE #1
  ENDIF
RETURN
