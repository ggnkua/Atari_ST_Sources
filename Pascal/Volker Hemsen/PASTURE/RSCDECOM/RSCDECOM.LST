    OPEN "o",#2,@gfn$(pfad$)+"I"
    PRINT #2,"const"
    anz&=INP(#1)+SHL(INP(#1),8)
    FOR i&=0 TO PRED(anz&)
      oindex&=INP(#1)
      bindex&=INP(#1)
      typ&=INP(#1)
      btyp&=INP(#1)
      a$=STRING$(12,0)
      BGET #1,V:a$,10
      IF baumtyp&=0
        a&=oindex&
