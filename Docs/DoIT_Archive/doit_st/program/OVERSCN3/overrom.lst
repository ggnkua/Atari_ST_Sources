' OVERROM.BAS   Version 1.0   Karsten Isakovic, Berlin 25.05.89
' GFA-Basic
'
Print Chr$(244);" ROM-TOS Source Patch ";Chr$(244)
Print Chr$(245);"  by K.Isakovic       ";Chr$(245)
Print
Input "Filename ->  ",Name$
Print
If Name$=""
  Print "ERROR : No Filename "
Else
  If Exist(Name$)
    Open "U",#1,Name$
    Flag=0
    @Test_old(&H1263E)
    @Test_old(&H12682)
    If Flag=0
      @Write_new(&H1263E)
      @Write_new(&H12682)
      Print "OK , TOS now modified !"
    Else
      Flag=0
      @Test_new(&H1263E)
      @Test_new(&H12682)
      If Flag=0
        Print "OK , TOS already modified !"
      Else
        Print "ERROR : No correct German ROM-TOS 1.4 Source-File"
      Endif
    Endif
    Close #1
  Else
    Print "ERROR : ";Name$;" not found !"
  Endif
Endif
Print
Print "Goodbye"
Input Ende$
Edit
Procedure Write_new(Off) ! Write $CEC0E84F
  Seek #1,Off
  Out #1,&HCE
  Out #1,&HC0
  Out #1,&HE8
  Out #1,&H4F
Return
Procedure Test_old(Off)  ! Test  $E848CEC0
  Seek #1,Off
  Flag=Flag+(&HE8<>Inp(#1)) ! GFA : True = -1 , False = 0
  Flag=Flag+(&H48<>Inp(#1))
  Flag=Flag+(&HCE<>Inp(#1))
  Flag=Flag+(&HC0<>Inp(#1))
Return
Procedure Test_new(Off)  ! Test  $CEC0E84F
  Seek #1,Off
  Flag=Flag+(&HCE<>Inp(#1)) ! GFA : True = -1 , False = 0
  Flag=Flag+(&HC0<>Inp(#1))
  Flag=Flag+(&HE8<>Inp(#1))
  Flag=Flag+(&H4F<>Inp(#1))
Return
