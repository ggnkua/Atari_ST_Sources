# Makefile for commands/autil

CC	= cc68
CFLAGS	= -D_MINIX -D_POSIX_SOURCE -O
CCLD	= $(CC) $(CFLAGS)

all:	anm asize

anm:	anm.c
	$(CCLD) -o $@ $?
	install -S 32kw $@

asize:	asize.c
	$(CCLD) -o $@ $?
	install -S 4kw $@

install:	/usr/bin/anm /usr/bin/asize

/usr/bin/anm:	anm
	install -cs -o bin -g bin -m 555 $? $@

/usr/bin/asize:	asize
	install -cs -o bin -g bin -m 555 $? $@

clean:
	rm -f *.o core

clobber:
	rm -f anm asize core

