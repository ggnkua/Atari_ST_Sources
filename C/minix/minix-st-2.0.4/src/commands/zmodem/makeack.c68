# Makefile for zmodem

all: rz sz

CC = cc68

CFLAGS= -DPOSIX -D_MINIX -D_POSIX_SOURCE -O2

rz: rz.c rbsb.c zm.c zmodem.h
	$(CC) $(CFLAGS) -o rz rz.c
	install -S 5kw $@

sz: sz.c rbsb.c zm.c zmodem.h
	$(CC) $(CFLAGS) -o sz sz.c
	install -S 5kw $@

install:	/usr/bin/rz /usr/bin/sz

/usr/bin/rz:	rz
	install -cs -o bin -g bin -m 555 rz $@

/usr/bin/sz:	sz
	install -cs -o bin -g bin -m 555 sz $@

clean:	
	rm -f *.bak *.o core

clobber:	
	rm -f *.bak *.o core rz sz

