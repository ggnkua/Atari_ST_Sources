OBJ	= o
MACHINE_OBJ	= unix.$(OBJ)
CFLAGS=		-c -O -DUNIX 
LFLAGS =	-o rayscene -O


# Make's implicit rules for making a .o file from a .c file...
#
.c.o :
	$(CC) $(CFLAGS) $*.c

RAYOBJS = rayscene.$(OBJ) readval.$(OBJ) script.$(OBJ)




rayscene:	$(RAYOBJS)
	cc $(LFLAGS) $(RAYOBJS) -lm


rayscene.$(OBJ) : rayscene.c
readval.$(OBJ) : readval.c
script.$(OBJ) : script.c
