clipbrd$=@clipbrd_check
clip!=@clipbrd_search(clipbrd$)
> FUNCTION clipbrd_check
~SCRP_READ(clip$)
IF LEN(clip$)>0
  IF RIGHT$(clip$)<>"\"
    clip$=clip$+"\"
  ENDIF
  RETURN clip$
ELSE
  RETURN ""
ENDIF
ENDFUNC
> FUNCTION clipbrd_search(clipbrd$)
' vom Programmierer auszufÅllen; man sollte hier
' nachschauen, ob das Clipboard ne interessante Datei enthÑlt
' (zB per exist() nach Dateien suchen)
'
IF EXIST(clipbrd$+"SCRAP.TXT")
  RETURN TRUE
ELSE
  RETURN FALSE
ENDIF
ENDFUNC

