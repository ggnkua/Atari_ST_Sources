> PROCEDURE init
home$=CHR$(65+GEMDOS(&H19))+":"+DIR$(0)+"\"
rsc$=prg$+".RSC"+STRING$(13,0)
~SHEL_FIND(rsc$)
IF NOT EXIST(rsc$)
  ALERT 1,"RSC-File nicht gefunden!",1," Suche ",back|
  file$=prg$+".RSC"
  path$=home$
  @fileselect(prg$+".RSC finden ...","*.RSC",0,path$,file$,back|)
  rsc$=path$+file$
ENDIF
IF EXIST(rsc$)
  home$=@pfad$(rsc$)
  IF INSTR(home$,":")=0
    home$=CHR$(65+GEMDOS(&H19))+":"+DIR$(0)+"\"+home$
  ENDIF
  ~RSRC_LOAD(rsc$)
  @rsc_init
ELSE
  ALERT 1,"RSC-File nicht gefunden!",1,"Abbruch",back|
  EDIT
ENDIF
RETURN
