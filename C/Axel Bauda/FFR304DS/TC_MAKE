# Makefile for Turbo C / Turbo C++ 
# 
# FFR (Mailbox File Fractionizer)
#

CCFLAGS = -ms -d -G -O -Z
CLIB = c:\tc\lib

.c.obj:
	tcc -c $(CCFLAGS) $<

FFROBJS = 	ffr.obj\
	  	fraction.obj\
		kill.obj\
		identify.obj\
		range.obj\
		util.obj\
		cfg.obj


ffr.exe : $(FFROBJS)
	tlink /c 	$(CLIB)\c0s.obj+\
			ffr.obj+\
			fraction.obj+\
			kill.obj+\
			identify.obj+\
			range.obj+\
			util.obj+\
			cfg.obj\
			,ffr,,$(CLIB)\cs

ffr.obj : ffr.c ffr.h globals.h

fraction.obj : fraction.c ffr.h

kill.obj : kill.c ffr.h 

identify.obj: identify.c ffr.h

range.obj : range.c ffr.h

util.obj : util.c ffr.h

cfg.obj : cfg.c ffr.h
