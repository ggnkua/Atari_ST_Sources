' VAR_PAR.LST
'
b$="ABC123ABC"
PRINT "Originalstring:"'b$
PRINT
PRINT "Call by value:"
@call_by_value(b$)
PRINT "Das aufrufende Programm erh„lt"'b$'"zurck"
PRINT
PRINT "Call by reference:"
@call_by_reference(b$)
PRINT "Das aufrufende Programm erh„lt"'b$'"zurck"
'
> PROCEDURE call_by_value(a$)
  LOCAL i&,code|
  FOR i&=1 TO LEN(a$)
    code|=ASC(MID$(a$,i&,1))
    IF code|<65 OR code|>90
      MID$(a$,i&)=" "
    ENDIF
  NEXT i&
  PRINT "Erzeugt wurde:"'a$
RETURN
'
> PROCEDURE call_by_reference(VAR a$)
  LOCAL i&,code|
  FOR i&=1 TO LEN(a$)
    code|=ASC(MID$(a$,i&,1))
    IF code|<65 OR code|>90
      MID$(a$,i&)=" "
    ENDIF
  NEXT i&
  PRINT "Erzeugt wurde:"'a$
RETURN
