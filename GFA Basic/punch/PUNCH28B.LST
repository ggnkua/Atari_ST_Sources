' gfa punch 28b
' etoiles dans l'espace de couleur rouge
SETCOLOR 0,0,0,0
DIM x(50),y(50),xp(50),yp(50)
FOR i=1 TO 50
  xp(i)=INT(RND*20)-10
  yp(i)=INT(RND*20)-10
  x(i)=160
  y(i)=100
NEXT i
DO
  EXIT IF INKEY$=" "
  FOR i=1 TO 50
    PSET x(i),y(i),0
    ADD x(i),xp(i)
    ADD y(i),yp(i)
    ' moyenne resolution
    ' IF x(i)<0 OR x(i)>640 OR y(i)<0 OR y(i)>400
    ' basse resolution
    IF x(i)<0 OR x(i)>320 OR y(i)<0 OR y(i)>200
      x(i)=160
      y(i)=100
    ENDIF
    PSET x(i),y(i),1
  NEXT i
LOOP
