' GFA PUNCH 31
' fractale
SETCOLOR 0,0
cercle(160,100,50)
VOID INP(2)
EDIT
'
PROCEDURE cercle(x&,y&,r|)
  '
  IF r|>2
    COLOR 1+RND*15
    CIRCLE x&,y&,r|
    cercle(x&,SUB(y&,r|),SHR(r|,1))
    cercle(x&,ADD(y&,r|),SHR(r|,1))
    cercle(SUB(x&,r|),y&,SHR(r|,1))
    cercle(ADD(x&,r|),y&,SHR(r|,1))
  ENDIF
RETURN
