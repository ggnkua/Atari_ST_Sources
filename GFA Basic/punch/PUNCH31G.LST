' GFA PUNCH 31
' feu d artifice
SETCOLOR 0,0
DIM x(15),y(15),vco(15),vsi(15),t(15)
DO
  PSET x(i),y(i),FALSE
  ADD x(i),vco(i)
  SUB y(i),vsi(i)-t(i)
  IF x(i)>0 AND x(i)<320 AND y(i)>0 AND y(i)<200
    PSET x(i),y(i),1+i
    ADD t(i),0.3
  ELSE
    WAVE 8,1,0,4000
    x(i)=160
    y(i)=180
    k=ADD(2,RND*12)
    vco(i)=k*(-0.5+RND)
    vsi(i)=k*(0.86+RND*0.13)
    t(i)=0
  ENDIF
  i=(-i-1)*(i<15)
LOOP
