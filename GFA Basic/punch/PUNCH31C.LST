' GFA PUNCH 31
' 50 couleurs simultan‚es
HIDEM
DIM col%(512)
i%=0
a%=50
' a%=152
b%=462
' b%=360
FOR r%=7 DOWNTO 0
  FOR v%=0 TO 7
    FOR b%=0 TO 7
      col%(i%)=VAL("&h"+STR$(r%)+STR$(v%)+STR$(b%))
      INC i%
    NEXT b%
  NEXT v%
NEXT r%
REPEAT
  VSYNC
  FOR i%=1+nb1% TO a%+nb1%
    SETCOLOR 0,col%(i%)
  NEXT i%
  INC nb1%
  IF nb1%=b%
    nb1%=1
  ENDIF
UNTIL INKEY$<>""
SHOWM
