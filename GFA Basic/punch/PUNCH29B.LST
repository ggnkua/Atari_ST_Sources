' gfa punch 29
' ERREUR
BOX 0,0,319,199
DIM b(1,3)
READ b(0,0),b(0,1),b(1,0),b(1,1),b(0,2),b(0,3),b(1,2),b(1,3)
DATA 30,30,40,21,1,1,1,1
COLOR 11
DO
  FOR t=0 TO 1
    ADD b(t,0),b(t,2)
    ADD b(t,1),b(t,3)
    IF POINT(b(t,0)+b(t,2),b(t,1))=1
      COLOR RANDOM(13)+2
      MUL b(t,2),-1
    ENDIF
    IF POINT(b(t,0)+b(t,1),b(t,3))=1
      COLOR RANDOM(13)+2
      MUL b(t,3),-1
    ENDIF
    LINE b(0,0),b(0,1),b(1,0),b(1,1)
  NEXT t
LOOP
