' gfa punch 30
' degrae de couleur
degrade(640,20)
FOR f=0 TO 400 STEP 20
  PUT 0,f,deg$
NEXT f
'
PROCEDURE degrade(x%,y%)
  '
  LOCAL f%,g%,d%
  FOR f%=0 TO x%
    CLR g%
    REPEAT
      d%=RND*y%
      IF POINT(f%,d%)=0
        PSET f%,d%,1
        INC g%
      ENDIF
    UNTIL g%>y%-f%*(y%/x%)-1
  NEXT f%
  GET 0,0,x%-1,y%-1,deg$
RETURN
