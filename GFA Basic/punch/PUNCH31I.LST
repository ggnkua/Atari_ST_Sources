' gfa punch 31
' fondu
FILESELECT "\*.pi1","",nom$
HIDEM
fondu(6,nom$)
VOID INP(2)
SHOWM
EDIT
'
PROCEDURE fondu(vitesse%,nom$)
  '
  LOCAL i%,reg%
  FOR i%=0 TO 15
    SETCOLOR i%,&H0
  NEXT i%
  BLOAD nom$,XBIOS(2)-34
  FOR i%=0 TO 15
    reg%=DPEEK(i%*2+XBIOS(2)-32)
    PAUSE vitesse%
    SDPOKE &HFF8240+i%*2,reg%
  NEXT i%
RETURN
