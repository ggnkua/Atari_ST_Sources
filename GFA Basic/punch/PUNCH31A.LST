' gfa punch 31
' grafitis
RESERVE 100000
buf%=MALLOC(32000)
FILESELECT "\*.pi1","",nom$
BLOAD nom$,buf%-34
VOID XBIOS(6,L:buf%-32)
' taille du grain
gr%=15
' largeur du debit
dt%=27
REPEAT
  MOUSE x%,y%,k%
  IF k%=1
    REPEAT
      i%=RAND(x%+dt%)
    UNTIL i%>x%-dt% AND i%<320-gr%
    REPEAT
      j%=RAND(y%+dt%)
    UNTIL j%>y%-dt% AND j%<200-gr%
    RC_COPY buf%,i%,j%,gr%,gr% TO XBIOS(2),i%,j%
  ENDIF
UNTIL k%=2
VOID MFREE(buf%)
EDIT
