' *** TOS_DATE.LST ***                                 2nd GFA-Manual, page 1-5
FUNCTION tos_date$
  '
  ' *** Returns TOS-date as string (format dd.mm.yyyy, e.g. "20.11.1985")
  '
  LOCAL d$
  d$=HEX$(LPEEK(ADD(LPEEK(&H4F2),24)))
  RETURN MID$(d$,3,2)+"."+LEFT$(d$,2)+"."+RIGHT$(d$,4)
ENDFUNC
