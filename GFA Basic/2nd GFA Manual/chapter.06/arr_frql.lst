' *** ARR_FRQL.LST ***                                 2nd GFA-Manual, page 6-8
FUNCTION array_freq_limit(higher!,limit,VAR proc())
  '
  ' *** Return frequency of numbers in word-array
  ' *** If higher!=TRUE numbers ò limit& are counted
  ' *** If higher!=FALSE numbers ó limit& are counted
  '
  LOCAL freq,i
  IF higher!
    FOR i=0 TO PRED(DIM?(proc()))
      IF proc(i)>=limit
        INC freq
      ENDIF
    NEXT i
    RETURN freq
  ELSE
    FOR i=0 TO PRED(DIM?(proc()))
      IF proc(i)<=limit
        INC freq
      ENDIF
    NEXT i
    RETURN freq
  ENDIF
ENDFUNC
