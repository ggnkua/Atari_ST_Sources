' *** STR_REV.LST ***                                  2nd GFA-Manual, page 7-3
FUNCTION string_reverse$(txt$)
  '
  ' *** Return reverse of string txt$
  '
  LOCAL i,len,rev$
  len=LEN(txt$)
  rev$=SPACE$(len)
  FOR i=len DOWNTO 1
    MID$(rev$,SUCC(SUB(len,i)),1)=MID$(txt$,i,1)
  NEXT i
  RETURN rev$
ENDFUNC
