RETURN error%
ENDFUNC
> PROCEDURE do_pipe
pipe_fd&=@fopen("U:\PIPE\ALERT",o_rdwr&+o_creat&+o_trunc&+o_ndelay&+o_denynone&)
IF pipe_fd&<0
ALERT 1,"Not able to create pipe. ",1,"OK",ok|
no_alert&=1
ELSE IF pipe_fd&>=32
~@fclose(pipe_fd&)
ALERT 1,"Out of range. ",1,"OK",ok|
no_alert&=1
ENDIF
IF no_alert&=0
~@fcntl(pipe_fd&,0,f_setfd&)  ! to avoid GEM bus error
ENDIF
RETURN
