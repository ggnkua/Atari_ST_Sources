LET par$="' '"
ELSE IF INSTR(par$," ")>0
LET pos&=LEN(par$)
WHILE pos&>0
IF MID$(par$,pos&,1)="'"
LET par$=LEFT$(par$,pos&)+MID$(par$,pos&)
ENDIF
DEC pos&
WEND
LET par$="'"+par$+"'"
ENDIF
IF par$<>""
IF LEN(newcml$)>0
LET newcml$=newcml$+" "+par$
