LET pos&=1
LET len&=LEN(cml$)
LET space!=TRUE
LET par!=FALSE
WHILE pos&<=len&
LET char$=MID$(cml$,pos&,1)
SELECT char$
CASE " "
IF quote!
LET newcml$=newcml$+" "
ELSE
IF NOT space!
LET newcml$=newcml$+CHR$(0)
ENDIF
LET space!=TRUE
ENDIF
CASE "'"
IF quote!
IF MID$(cml$,pos&,2)="''"
LET newcml$=newcml$+"'"
INC pos&
ELSE
LET quote!=FALSE
LET space!=TRUE
LET newcml$=newcml$+CHR$(0)
ENDIF
ELSE
IF space!
IF MID$(cml$,pos&,3)="' '"
LET newcml$=newcml$+CHR$(0)
ADD pos&,2
ELSE
LET quote!=TRUE
CLR space!
ENDIF
ELSE
LET newcml$=newcml$+"'"
ENDIF
ENDIF
DEFAULT
LET newcml$=newcml$+char$
LET space!=FALSE
ENDSELECT
INC pos&
WEND
IF NOT space!
LET newcml$=newcml$+CHR$(0)
ENDIF
RETURN newcml$
ELSE
RETURN cml$
ENDIF
