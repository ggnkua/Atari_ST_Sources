DEFTEXT 1,0,0,6
DEFFILL 0,0
PBOX 200,60,440,140
BOX 200,60,440,140
BOX 203,63,437,137
BOX 262,80,378,120
LINE 302,80,302,120
LINE 342,80,342,120
LINE 262,95,378,95
LINE 262,105,378,105
TEXT 278,91,"+"
TEXT 318,91,"+"
TEXT 358,91,"+"
TEXT 278,116,"-"
TEXT 318,116,"-"
TEXT 358,116,"-"
DEFTEXT 1,1,900,4
TEXT 230,132,"HINTERGRUND"
DEFTEXT 1,0,900,4
TEXT 410,127,"TEXTFARBE"
DEFTEXT 1,0,0,6
'
' FARBPALETTE FšR DIE HINTERGRUNDFARBE HOLEN
'
GOSUB getpalette(1)
SHOWM
'
' MAUSABFRAGE DER BOX
'
REPEAT
  taste$=INKEY$
  MOUSE xm,ym,km
  GOSUB abfrage
UNTIL taste$=" "
'
' HINTERGRUND UND TEXTFARBE HOLEN, FALLS BEIDE GLEICH AUF SCHWARZ WEIS STELLEN
'
GOSUB getpalette(1)
vor$=fa$
vori1=ind1
vori2=ind2
vori3=ind3
GOSUB getpalette(2)
hint$=fa$
hini1=ind1
hini2=ind2
hini3=ind3
IF hint$=vor$
  SETCOLOR 0,7,7,7
  SETCOLOR 3,0,0,0
ENDIF
END
'
' ABFRAGEROUTINE FšR DIE BOX
'
PROCEDURE abfrage
  IF xm>205 AND ym>63 AND xm<255 AND ym<137 AND km=1
    farbe%=0
    DEFTEXT 1,1,900,4
    TEXT 230,132,"HINTERGRUND"
    DEFTEXT 1,0,900,4
    TEXT 410,127,"TEXTFARBE"
    DEFTEXT 1,0,0,6
    GOSUB getpalette(1)
  ENDIF
  IF xm>380 AND ym>63 AND xm<435 AND ym<137 AND km=1
    farbe%=3
    DEFTEXT 1,0,900,4
    TEXT 230,132,"HINTERGRUND"
    DEFTEXT 1,1,900,4
    TEXT 410,127,"TEXTFARBE"
    DEFTEXT 1,0,0,6
    GOSUB getpalette(2)
  ENDIF
  IF xm>262 AND ym>80 AND xm<302 AND ym<95 AND km=1
    INC ind1
    IF ind1=8
      DEC ind1
    ENDIF
    TEXT 278,103,ind1
    SETCOLOR farbe%,ind1,ind2,ind3
    PAUSE 5
  ENDIF
  IF xm>262 AND ym>105 AND xm<302 AND ym<120 AND km=1
    DEC ind1
    IF ind1=-1
      INC ind1
    ENDIF
    TEXT 278,103,ind1
    SETCOLOR farbe%,ind1,ind2,ind3
    PAUSE 5
  ENDIF
  IF xm>302 AND ym>80 AND xm<342 AND ym<95 AND km=1
    INC ind2
    IF ind2=8
      DEC ind2
    ENDIF
    TEXT 318,103,ind2
    SETCOLOR farbe%,ind1,ind2,ind3
    PAUSE 5
  ENDIF
  IF xm>302 AND ym>105 AND xm<342 AND ym<120 AND km=1
    DEC ind2
    IF ind2=-1
      INC ind2
    ENDIF
    TEXT 318,103,ind2
    SETCOLOR farbe%,ind1,ind2,ind3
    PAUSE 5
  ENDIF
  IF xm>342 AND ym>80 AND xm<382 AND ym<95 AND km=1
    INC ind3
    IF ind3=8
      DEC ind3
    ENDIF
    TEXT 358,103,ind3
    SETCOLOR farbe%,ind1,ind2,ind3
    PAUSE 5
  ENDIF
  IF xm>342 AND ym>105 AND xm<382 AND ym<120 AND km=1
    DEC ind3
    IF ind3=-1
      INC ind3
    ENDIF
    TEXT 358,103,ind3
    SETCOLOR farbe%,ind1,ind2,ind3
    PAUSE 5
  ENDIF
RETURN
'
'
' EIGENTLICHE PALETTEROUTINE
'
'
PROCEDURE getpalette(farbnr)
  nochmalgell:
  IF farbnr=1
    fa$=BIN$(DPEEK(&HFF8240))
  ENDIF
  IF farbnr=2
    fa$=BIN$(DPEEK(&HFF8246))
  ENDIF
  IF LEN(fa$)<16
    GOTO nochmalgell
  ENDIF
  ind3=VAL("&x"+MID$(fa$,14,3))
  ind2=VAL("&x"+MID$(fa$,10,3))
  ind1=VAL("&x"+MID$(fa$,6,3))
  TEXT 278,103,ind1
  TEXT 318,103,ind2
  TEXT 358,103,ind3
RETURN
