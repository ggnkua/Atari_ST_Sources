' WINDOW-Demo
'
ON BREAK GOSUB e_nde
DIM m.punkt$(32)
RESTORE m_datas
FOR i=0 TO 31
READ m.punkt$(i)
EXIT IF m.punkt$(i)="~~~~"
NEXT i
m.punkt$(i)=""
m.punkt$(i+1)=""
m_datas:
DATA DESKTOP
DATA  Information
DATA --------------------
DATA  , , , , , ,""
DATA DISKETTE
DATA   Datei laden
DATA   Datei speichern
DATA   Datei einrichten
DATA   Datei l”schen
DATA -----------------, Quit,""
DATA SERVICE
DATA - BLOCK 1 ----------------
DATA   Menpunkt 1a
DATA   Menpunkt 1b
DATA   Menpunkt 1c
DATA ---- BLOCK 2 -------------
DATA      Menpunkt 2a
DATA      Menpunkt 2b
DATA      Menpunkt 2c
DATA ------- BLOCK 3 ----------
DATA         Menpunkt 3a
DATA         Menpunkt 3b
DATA         Menpunkt 3c
DATA ~~~~
MENU m.punkt$()
OPENW 0
DPOKE CONTRL+2,0
DPOKE CONTRL+6,1
DPOKE CONTRL+12,1
DPOKE INTIN,1
VDISYS 106
DPOKE CONTRL+2,0
DPOKE CONTRL+6,1
DPOKE CONTRL+12,1
DPOKE INTIN,9
VDISYS 107
DEFTEXT ,1,0,13
xt%=2-SGN(XBIOS(4))
yt%=MIN(2,3-XBIOS(4))
DEFFILL ,2,4
PBOX 0,0,639/xt%,380/yt%
FOR i=1 TO 4
DPOKE WINDTAB+2+(i-1)*12,&X111111111110
INFOW #i," INFO-Zeile "+STR$(i)
TITLEW #i," TITEL-Zeile "+STR$(i)
OPENW i
CLEARW i
NEXT i
count=4
ON MENU GOSUB m.deal
ON MENU MESSAGE GOSUB m.essage
ON MENU KEY GOSUB k.ey
ON MENU IBOX 1,10,10,100,100 GOSUB i.box
ON MENU OBOX 2,10,10,100,100 GOSUB o.box
DO
ON MENU
MOUSE x,y,k
xr=DPEEK(WINDTAB+8+(MENU(4)-1)*12)-20/xt%
yr=DPEEK(WINDTAB+10+(MENU(4)-1)*12)-60/yt%
IF k=1 AND x=>0 AND y=>0 AND x<xr AND y<yr
PRINT x'y
ENDIF
LOOP
PROCEDURE m.essage
IF MENU(1)=21
INFOW #MENU(4),"(TOPPER) Window "+STR$(MENU(4))+" gew„hlt"
OPENW MENU(4)
CLEARW MENU(4)
ENDIF
IF MENU(1)=22
CLOSEW MENU(4)
DEC count
IF count=0
ALERT 2,"Programm-Ende ?",1,"OKAY|NEIN",d%
IF d%=1
@e_ndeELSE
ALERT 1,"Fenster ”ffnen:|Tasten 1 - 4",1,"OKAY",d%
ENDIF
ENDIF
ENDIF
IF MENU(1)=23
CLOSEW MENU(4)
DPOKE WINDTAB+4+(MENU(4)-1)*12,0
DPOKE WINDTAB+6+(MENU(4)-1)*12,19/yt%
DPOKE WINDTAB+8+(MENU(4)-1)*12,639/xt%
DPOKE WINDTAB+10+(MENU(4)-1)*12,380/yt%
INFOW #MENU(4),"(FULLER) Volle Gr”že"
OPENW MENU(4)
CLEARW MENU(4)
ENDIF
IF MENU(1)=24
INFOW #MENU(4),"(ARROWS) Pfeil:"+STR$(MENU(5))
ENDIF
IF MENU(1)=25
INFOW #MENU(4),"(SLIDE)H-Schieber : "+STR$(MENU(5))
ENDIF
IF MENU(1)=26
INFOW #MENU(4),"(SLIDE)V-Schieber : "+STR$(MENU(5))
ENDIF
IF MENU(1)=27
CLOSEW MENU(4)
DPOKE WINDTAB+8+(MENU(4)-1)*12,MENU(7)
DPOKE WINDTAB+10+(MENU(4)-1)*12,MENU(8)
INFOW #MENU(4),"(SIZER) Fenstergr”že ver„ndert"
OPENW MENU(4)
CLEARW MENU(4)
@get.wholearea
PRINT "X-Koordinate der Arbeitsfl„che bei: ";workx
PRINT "Y-Koordinate des Arbeitsfl„che bei: ";worky
PRINT "Breite der Arbeitsfl„che: ";workb
PRINT "H”he des Arbeitsfl„che: ";workh
ENDIF
IF MENU(1)=28
CLOSEW MENU(4)
DPOKE WINDTAB+4+(MENU(4)-1)*12,MENU(5)
DPOKE WINDTAB+6+(MENU(4)-1)*12,MENU(6)
DPOKE WINDTAB+8+(MENU(4)-1)*12,MENU(7)
DPOKE WINDTAB+10+(MENU(4)-1)*12,MENU(8)
INFOW #MENU(4),"(MOVER) Fenster wurde bewegt"
OPENW MENU(4)
CLEARW MENU(4)
ENDIF
RETURN
PROCEDURE m.deal
