m.punkt$(mp%)="  1a umgekehrt"
MENU m.punkt$()
ELSE
IF m.punkt$(mp%)="  1a umgekehrt"
' ** Alternative zu Men-Routine 1 **
m.punkt$(mp%)="  Menpunkt 1a"
MENU m.punkt$()
ENDIF
ENDIF
IF m.punkt$(mp%)="  Menpunkt 1b"
