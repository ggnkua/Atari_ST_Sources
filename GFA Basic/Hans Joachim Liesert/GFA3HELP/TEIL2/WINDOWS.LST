ENDIF
IF m.punkt$(mp%)="         Menpunkt 3b"
' ** Men-Routine 8 **
ENDIF
IF m.punkt$(mp%)="         Menpunkt 3c"
' ** Men-Routine 9 **
ENDIF
RETURN
PROCEDURE k.ey
PRINT "Scan- + ASCII-Code : ";MENU(14)
taste$=RIGHT$(MKI$(MENU(14)))
PRINT "Scan-Code  : "'PEEK(VARPTR(taste$))
PRINT "ASCII-Code : "'PEEK(VARPTR(taste$)+1)
IF taste$=>"1" AND taste$=<"4"
OPENW VAL(RIGHT$(taste$))
CLEARW VAL(RIGHT$(taste$))
INC count
ENDIF
RETURN
PROCEDURE i.box
IF flag=0
PRINT "Mauszeiger befindet sich in der Box."
flag=1
ENDIF
RETURN
PROCEDURE o.box
IF flag=1
PRINT "Mauszeiger befindet sich aužerhalb der Box."
flag=0
ENDIF
RETURN
PROCEDURE get.wholearea
DPOKE GINTIN,MENU(4)
DPOKE GINTIN+2,4
GEMSYS 104
workx=DPEEK(GINTOUT+2)
worky=DPEEK(GINTOUT+4)
workb=DPEEK(GINTOUT+6)
workh=DPEEK(GINTOUT+8)
RETURN
PROCEDURE e_nde
CLOSEW 4
CLOSEW 3
CLOSEW 2
CLOSEW 1
CLOSEW 0
MENU KILL
CLS
EDIT
RETURN
