DEFFILL ,2,4
PBOX 10,10,300,190
FILESELECT "\*.*","SHOW_ASC.DAT",f.nam$
IF EXIST(f.nam$)
@showdat(f.nam$)
ENDIF
PROCEDURE showdat(selec$)
LOCAL backscreen$,sh$,i%,tkey%,back%,curln%,byte%,xt%,old%
xt%=2-SGN(XBIOS(4))
SGET backscreen$
OPEN "I",#99,selec$
OPEN "",#98,"VID:"
CLS
REPEAT
IF LOF(#99)<255
sh$=INPUT$(LOF(#99),#99)
FOR i%=0 TO LEN(sh$)-1
byte%=PEEK(VARPTR(sh$)+i%)
'   Byte%=Byte{V:Sh$+I%}  ! fr V3.0
IF byte%=13 OR byte%=10
PRINT CHR$(byte%);
ELSE
OUT 5,byte%
ENDIF
NEXT i%
PRINT MKL$(&H1B441B44)
ELSE
REPEAT
IF EOF(#99)=0
old%=LOC(#99)
LINE INPUT #99,sh$
PRINT #98,sh$;
PRINT MKL$(&H1B441B44)
SEEK #99,old%+LEN(sh$)+2
te%=INT(LEN(sh$)/(80/xt%))+SGN(LEN(sh$) MOD (80/xt%))
ADD curln%,te%
ENDIF
tkey%=ASC(RIGHT$(INKEY$))
UNTIL curln%>21 OR EOF(#99) OR MOUSEK=2 OR tkey%=27
ENDIF
IF EOF(#99)
PRINT " **** Dateiende ****"''
ELSE
PRINT CHR$(27);"p";" Taste  (< Esc > = Abbruch)";CHR$(27);"q"
ENDIF
REPEAT
tkey%=ASC(RIGHT$(INKEY$))
UNTIL tkey% OR MOUSEK
PRINT MKL$(&H1B491B4B);
CLR curln%
UNTIL EOF(#99) OR tkey%=27
CLOSE #98
CLOSE #99
SPUT backscreen$
PAUSE 10
RETURN
