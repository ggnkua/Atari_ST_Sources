Dim Matrix(100,100)
Dim Rechenmatrix1(100,100)
Dim Rechenmatrix2(100,100)
Input "Wieviel Zeilen  hat die Matrix ? ",Zeile
Input "Wieviel Spalten hat die Matrix ? ",Spalte
If Zeile>100 Or Spalte>100 Then
  Print "Dimension ist zu grož, 100*100 ist die gr”žte Matrix, die m”glich ist"
  Run
Endif
Rang=0
For I=1 To Zeile
  For J=1 To Spalte
    Print "Bitte geben Sie den Wert des Elements (";I;",";J;") ein: ";
    Input Matrix(I,J)
  Next J
Next I
Print "Zur šberprfung:"
Print
For I=1 To Zeile
  For J=1 To Spalte
    Rechenmatrix1(I,J)=Matrix(I,J)
    Print Rechenmatrix1(I,J),
  Next J
  Print
Next I
If Zeile>Spalte Then
  Arrayfill Matrix(),0
  For I=1 To Zeile
    For J=1 To Spalte
      Matrix(J,I)=Rechenmatrix1(I,J)
    Next J
  Next I
  Swap Zeile,Spalte
  Arrayfill Rechenmatrix1(),0
  For I=1 To Zeile
    For J=1 To Spalte
      Rechenmatrix1(I,J)=Matrix(I,J)
    Next J
  Next I
Endif
I=Zeile+1            ! I enth„lt Dimension der zu prfenden Matrix
Repeat
  I=I-1
  R=0                ! Index fr Position der Untermatrix [Spalte]
  Repeat
    R=R+1
    J=0              ! Index fr Position der Untermatrix [Zeile]
    Repeat
      J=J+1
      Gosub Untermatrix(R,J,I)
      Gosub Deter
      Rang=I
    Until J+I>=Zeile Or Rang<>0
  Until R+I>=Spalte Or Rang<>0
Until I=1 Or Rang<>0
Print "Rang der Matrix betr„gt: ";Rang
Void Inp(2)
Run
Procedure Deter
  Vorfaktor=1
  Let Dim=I
  Gosub Determinante
  Determinante=Determinante*Vorfaktor
Return
Procedure Determinante
  If Dim>2 Then
    Spalteok=0
    For I=1 To Dim
      If Rechenmatrix1(1,I)<>0 Then
        If Spalteok=0 Then
          Spalteok=I
        Else
          Spalteok=Min(Spalteok,I)
        Endif
      Endif
    Next I
    If Spalteok<>0 Then
      Faktor=Rechenmatrix1(1,Spalteok)
      Vorfaktor=Vorfaktor*Faktor*(-1)^(Spalteok+1)
      For I=1 To Dim
        Rechenmatrix1(I,Spalteok)=Rechenmatrix1(I,Spalteok)/Faktor
      Next I
      I=Spalteok+1
      While I<=Dim
        Faktor=Rechenmatrix1(1,I)/Rechenmatrix1(1,Spalteok)
          Rechenmatrix1(R,I)=Rechenmatrix1(R,I)-Faktor*Rechenmatrix1(R,Spalteok)
        Next R
        I=I+1
      Wend
      Gosub Adjunkte(1,Spalteok,Dim)
      Gosub Determinante
    Else
      Determinante=0
    Endif
  Else
    If Dim=0 Then
      Determinante=0
    Endif
    If Dim=1 Then
      Determinante=Matrix(1,1)
    Endif
    If Dim=2 Then
      A=Rechenmatrix1(1,1)
      B=Rechenmatrix1(1,2)
      C=Rechenmatrix1(2,1)
      D=Rechenmatrix1(2,2)
      Gosub Deter2(A,B,C,D)
    Endif
  Endif
Return
Procedure Deter2(A,B,C,D)
  Determinante=A*D-B*C
Return
Procedure Adjunkte(Zeile,Spalte,Dimen)
  Local I,J
  Let Dim=Dimen-1
  Arrayfill Rechenmatrix2(),0
  For I=1 To Dimen
    If I<>Zeile Then
      For J=1 To Dimen
        If J<>Spalte Then
          Rechenmatrix2(I+(I>Zeile),J+(J>Spalte))=Rechenmatrix1(I,J)     ! True = -1
        Endif
      Next J
    Endif
  Next I
  Arrayfill Rechenmatrix1(),0
  For I=1 To Dimen-1
    For J=1 To Dimen-1
      Rechenmatrix1(I,J)=Rechenmatrix2(I,J)*(-1)^(Zeile+Spalte)
    Next J
  Next I
Return
Procedure Untermatrix(Spalte,Zeile,Dimension)
  Local I,J
  Arrayfill Rechenmatrix1(),0
  For I=1 To Dimension
    For J=1 To Dimension
      Rechenmatrix1(I,J)=Matrix(Spalte+I,Zeile+J)
    Next J
  Next I
Return

