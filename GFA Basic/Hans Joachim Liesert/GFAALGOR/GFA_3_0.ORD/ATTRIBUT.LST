' Programm zum Žndern der Dateiattribute
' Filenamen ermitteln
fs_iinpath$="C:\*.*"
fs_ireturn=FSEL_INPUT(fs_iinpath$,fs_insel$,fs_iexbutton)
IF fs_ireturn<>0 AND fs_iexbutton=1
  PRINT "File ";fs_insel$
  pathnr|=RINSTR(fs_iinpath$,"\")
  path$=LEFT$(fs_iinpath$,pathnr|)
  filename$=path$+fs_insel$
  ' bestehende Atrribute ermitteln
  a%=GEMDOS(&H43,L:VARPTR(filename$),0,0)
  ' Attribute anzeigen
  GOSUB anzeigen
  ' Žnderungen vornehmen?
  PRINT
  PRINT "Wollen Sie Žnderungen vornehmen? (j/n)"
  KEYGET z|
  IF z|=ASC("j") THEN
    ' Žnderungen durchfhren
    PRINT "Bitte die zum Attribut geh”rende Zahl drcken oder 0 fr Ende"
    REPEAT
      KEYGET z|
      zz%=z|-48
      IF (zz%>0) AND (zz%<5) THEN
        ' zugeh”riges Bit in A% umdrehen
        bit%=SGN(a% AND 2^(zz%-1))
        bit%=(1-bit%)*2^(zz%-1)
        a%=(a% AND NOT 2^(zz%-1))+bit%
        ' neue Belegung anzeigen
        GOSUB anzeigen
      ENDIF
    UNTIL zz%=0
    ' Attribute „ndern
    a%=GEMDOS(&H43,L:VARPTR(filename$),-1,a%)
    IF a%<0 THEN
      PRINT "GEMDOS-Fehlermeldung: ";a%
      STOP
    ENDIF
  ENDIF
ENDIF
PROCEDURE anzeigen
  PRINT AT(1,1)
  IF (a% AND 1)=1 THEN
    PRINT "[1] Read-only "
  ELSE
    PRINT "[1] Read/Write"
  ENDIF
  IF (a% AND 2)=2 THEN
    PRINT "[2] versteckt      "
  ELSE
    PRINT "[2] nicht versteckt"
  ENDIF
  IF (a% AND 4)=4 THEN
    PRINT "[3] Systemfile"
  ELSE
    PRINT "[3] Normalfile"
  ENDIF
  IF (a% AND 8)=8 THEN
    PRINT "[4] Volume-Label     "
  ELSE
    PRINT "[4] kein Volume-Label"
  ENDIF
RETURN
