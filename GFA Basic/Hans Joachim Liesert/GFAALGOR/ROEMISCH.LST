Procedure Roemisch(Zahl%)
  ' wandelt eine Zahl ins r”mische Zahlensystem um
  ' Rckgabewert in R$
  R$=""
  While Zahl%>=1000
    R$=R$+"M"
    Zahl%=Zahl%-1000
  Wend
  If Zahl%>=900 Then
    R$=R$+"CM"
    Zahl%=Zahl%-900
  Endif
  If Zahl%>=500 Then
    R$=R$+"D"
    Zahl%=Zahl%-500
  Endif
  If Zahl%>=400 Then
    R$=R$+"CD"
    Zahl%=Zahl%-400
  Endif
  While Zahl%>=100
    R$=R$+"C"
    Zahl%=Zahl%-100
  Wend
  If Zahl%>=90 Then
    R$=R$+"XC"
    Zahl%=Zahl%-90
  Endif
  If Zahl%>=50 Then
    R$=R$+"L"
    Zahl%=Zahl%-50
  Endif
  If Zahl%>=40 Then
    R$=R$+"XL"
    Zahl%=Zahl%-40
  Endif
  While Zahl%>=10
    R$=R$+"X"
    Zahl%=Zahl%-10
  Wend
  If Zahl%>=9 Then
    R$=R$+"IX"
    Zahl%=Zahl%-9
  Endif
  If Zahl%>=5 Then
    R$=R$+"V"
    Zahl%=Zahl%-5
  Endif
  If Zahl%>=4 Then
    R$=R$+"IV"
    Zahl%=Zahl%-4
  Endif
  While Zahl%>=1
    R$=R$+"I"
    Zahl%=Zahl%-1
  Wend
Return
