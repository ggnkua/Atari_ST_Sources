> PROCEDURE create_help_file
  '
  end.of.data!=FALSE
  buff.pos%=0
  line.number=0
  RESTORE help_data
  REPEAT
    READ a$
    INC line.number
    PRINT line.number,a$
    IF a$="End Of Data Segment"
      end.of.data!=TRUE
    ELSE
      IF a$="."
        a$=""
      ELSE
        FOR x=1 TO LEN(a$)
          IF MID$(a$,x,1)="`"
            MID$(a$,x,1)=","
          ENDIF
        NEXT x
        CHAR{V:help_buffer|(buff.pos%)}=a$
      ENDIF
    ENDIF
    ADD buff.pos%,51
  UNTIL end.of.data!=TRUE
  '
  BSAVE "SIMPLEX.HLP",V:help_buffer|(0),18258
  '
RETURN
