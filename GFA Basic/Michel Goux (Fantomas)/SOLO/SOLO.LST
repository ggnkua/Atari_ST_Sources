$C+
'
ON BREAK GOSUB fin
ON ERROR GOSUB fin
@init
'
newlevel:
~XBIOS(5,L:ecran1%,L:ecran1%,W:-1)
CLS
IF hp&<27
  ADD hp&,5
ENDIF
INC level&
ehp&=level&*6
shot&=200
x&=160
y&=160
x2&=160
y2&=10
momentum=0
hmomentum=0
vdir=1
hdir=1
hdir2=1
vdir2=2
eship=1
FOR i=1 TO level&*5
  obs&(i,1)=INT(RND*3)+1
  obs&(i,2)=INT(RND*305)+1
  obs&(i,3)=INT(RND*60)+1
NEXT i
startime%=TIMER
CLS
DEFTEXT 255,0,0,6
level1$="Wave "+STR$(level&)
TEXT (320-LEN(level1$)*8)/2,96,level1$
level2$=desc$(level&)
TEXT (320-LEN(level2$)*8)/2,104,level2$
REPEAT
UNTIL BYTE{&HFFFFC02}=57
REPEAT
UNTIL BYTE{&HFFFFC02}=185
' *-------------------*
'   Boucle principale
' *-------------------*
' ~C:depack%(L:mod_jeu%,L:mod%)
' ~C:dsp_play%(L:mod%)
putship:
s:
DO
  @permute_ecrans
  @etoiles
  @vaisseau
  '
  ' *--- Barre de vie et tirs ---*
  '
  ALINE 0,0,0,200,1,&HFFFF,0
  ALINE 0,0,0,shot&,9,&HFFFF,0
  ALINE 0,199,320,199,4,&HFFFF,0
  ALINE 0,199,hp&*10,199,14,&HFFFF,0
  '
  ' *--- Tirs vaisseau ---*
  '
  IF b1|=1
    fire1&(1,2)=fire1&(1,2)-5
    ALINE fire1&(1,1),fire1&(1,2),fire1&(1,1),fire1&(1,2)-5,9,&HFFFF,0
    IF fire1&(1,2)<=0
      b1|=0
    ENDIF
  ENDIF
  IF b2|=1
    fire1&(2,2)=fire1&(2,2)-5
    ALINE fire1&(2,1),fire1&(2,2),fire1&(2,1),fire1&(2,2)-5,9,&HFFFF,0
    IF fire1&(2,2)<=0
      b2|=0
    ENDIF
  ENDIF
  IF b3|=1
    fire1&(3,2)=fire1&(3,2)-5
    ALINE fire1&(3,1),fire1&(3,2),fire1&(3,1),fire1&(3,2)-5,9,&HFFFF,0
    IF fire1&(3,2)<=0
      b3|=0
    ENDIF
  ENDIF
  IF b4|=1
    fire1&(4,2)=fire1&(4,2)-5
    ALINE fire1&(4,1),fire1&(4,2),fire1&(4,1),fire1&(4,2)-5,9,&HFFFF,0
    IF fire1&(4,2)<=0
      b4|=0
    ENDIF
  ENDIF
  IF b5|=1
    fire1&(5,2)=fire1&(5,2)-5
    ALINE fire1&(5,1),fire1&(5,2),fire1&(5,1),fire1&(5,2)-5,9,&HFFFF,0
    IF fire1&(5,2)<=0
      b5|=0
    ENDIF
  ENDIF
  '
  IF eship=0
    shot&=200
    ALINE 0,0,320,0,4,&HFFFF,0
    ALINE 0,0,ehp&*10,0,14,&HFFFF,0
    IF hmomentum2<>0
      SELECT hdir2
      CASE 1
        x2&=x2&+hmomentum2
      CASE 2
        x2&=x2&-hmomentum2
      ENDSELECT
    ENDIF
    IF vmomentum2<>0
      SELECT vdir2
      CASE 1
        y2&=y2&-vmomentum2
      CASE 2
        y2&=y2&+vmomentum2
      ENDSELECT
    ENDIF
    IF dy=0
      IF INT(RND*5+1)=2
        dy=1
        vmomentum2=INT(RND*3)
      ENDIF
    ENDIF
    IF dy=1
      IF INT(RND*10+1)=3
        vmomentum2=0
        dy3=1
      ENDIF
    ENDIF
    IF dy3=1
      IF INT(RND*20+1)=17
        dy2&=1
      ENDIF
    ENDIF
    IF dy2&=1
      DEC vmomemtum2
    ENDIF
    IF dy2&=1
      IF y2&<15
        vmomentum2=0
        dy=0
        dy2&=0
        GOTO skip3
      ENDIF
    ENDIF
    IF y2&<15
      y2&=10
      INC vmomentum2
    ENDIF
    IF dy2&=1
      DEC vmomentum2
      GOTO skip3
    ENDIF
    IF y2&>85
      y2&=85
      DEC vmomentum
      IF dy=1
        IF vmomentum<=0
          IF INT(RND*10+1)=5
            dy2&=1
            DEC vmomentum
          ENDIF
        ENDIF
      ENDIF
    ENDIF
  skip3:
    IF x2&<10
      x2&=10
    ENDIF
    IF x2&>300
      x2&=300
    ENDIF
    IF x2&<x&
      INC hmomentum2
      INC noshoot&
      IF noshoot&=45
        noshoot&=0
        GOTO shoots
      ELSE
        GOTO skip
      ENDIF
    ENDIF
    IF x2&>x&+10
      DEC hmomentum2
      INC noshoot&
      IF noshoot&=45
        noshoot&=0
        GOTO shoots
      ELSE
        GOTO skip
      ENDIF
    ENDIF
    IF hmomentum2>0
      DEC hmomentum2
    ENDIF
    IF hmomentum2<0
      INC hmomentum2
    ENDIF
  shoots:
    IF a1|=0
      fire2&(1,1)=x2&+5
      fire2&(1,2)=y2&
      a1|=1
      GOTO skip
    ENDIF
    IF a2|=0
      fire2&(2,1)=x2&+5
      fire2&(2,2)=y2&
      a2|=1
      GOTO skip
    ENDIF
    IF a3|=0
      fire2&(3,1)=x2&+5
      fire2&(3,2)=y2&
      a3|=1
      GOTO skip
    ENDIF
    IF a4|=0
      fire2&(4,1)=x2&+5
      fire2&(4,2)=y2&
      a4|=1
      GOTO skip
    ENDIF
    IF a5|=0
      fire2&(5,1)=x2&+5
      fire2&(5,2)=y2&
      a5|=1
      GOTO skip
    ENDIF
    IF x2&>305
      x2&=305
    ENDIF
    IF x2&<10
      x2&=10
    ENDIF
    IF y2&>85
      y2&=85
    ENDIF
    IF y2&<0
      y2&=0
    ENDIF
  skip:
    RC_COPY image%,16,0,16,16 TO ecran1%,x2&,y2&
    ' *----------------------------------*
    '
    '  ð Test colisions des tirs ennemi ð
    '
    ' *----------------------------------*
    '
    ' * --- Tir 1 ---*
    IF a1|=1
      fire2&(1,2)=fire2&(1,2)+5
      ALINE fire2&(1,1),fire2&(1,2),fire2&(1,1),fire2&(1,2)-5,12,&HFFFF,0
      IF fire2&(1,2)>199
        a1|=0
      ELSE
        xpoint&=fire2&(1,1)-x&
        IF xpoint&<10 AND xpoint&>=0
          ypoint&=fire2&(1,2)-y&
          IF ypoint&<10 AND ypoint&>=0
            DEC hp&
            a1|=0
            IF hp&=0
              RC_COPY image%,32,0,16,16 TO ecran1%,x&,y&
              @youlose
            ENDIF
          ENDIF
        ENDIF
      ENDIF
    ENDIF
    ' *--- Tir 2 ---*
    IF a2|=1
      fire2&(2,2)=fire2&(2,2)+5
      ALINE fire2&(2,1),fire2&(2,2),fire2&(2,1),fire2&(2,2)-5,12,&HFFFF,0
      IF fire2&(2,2)>=200
        a2|=0
      ELSE
        xpoint&=fire2&(2,1)-x&
        IF xpoint&<10 AND xpoint&>=0
          ypoint&=fire2&(2,2)-y&
          IF ypoint&<10 AND ypoint&>=0
            DEC hp&
            a2|=0
            IF hp&=0
              RC_COPY image%,32,0,16,16 TO ecran1%,x&,y&
              @youlose
            ENDIF
          ENDIF
        ENDIF
      ENDIF
    ENDIF
    ' *--- Tir 3 ---*
    IF a3|=1
      fire2&(3,2)=fire2&(3,2)+5
      ALINE fire2&(3,1),fire2&(3,2),fire2&(3,1),fire2&(3,2)-5,12,&HFFFF,0
      IF fire2&(3,2)>199
        a3|=0
      ELSE
        xpoint&=fire2&(3,1)-x&
        IF xpoint&<10 AND xpoint&>=0
          ypoint&=fire2&(3,2)-y&
          IF ypoint&<10 AND ypoint&>=0
            DEC hp&
            a3|=0
            IF hp&=0
              RC_COPY image%,32,0,16,16 TO ecran1%,x&,y&
              @youlose
            ENDIF
          ENDIF
        ENDIF
      ENDIF
    ENDIF
    ' *--- Tir 4 ---*
    IF a4|=1
      fire2&(4,2)=fire2&(4,2)+5
      ALINE fire2&(4,1),fire2&(4,2),fire2&(4,1),fire2&(4,2)-5,12,&HFFFF,0
      IF fire2&(4,2)>199
        a4|=0
      ELSE
        xpoint&=fire2&(4,1)-x&
        IF xpoint&<10 AND xpoint&>=0
          ypoint&=fire2&(4,2)-y&
          IF ypoint&<10 AND ypoint&>=0
            DEC hp&
            a4|=0
            IF hp&=0
              RC_COPY image%,32,0,16,16 TO ecran1%,x&,y&
              @youlose
            ENDIF
          ENDIF
        ENDIF
      ENDIF
    ENDIF
    ' *--- Tir 5 ---*
    IF a5|=1
      fire2&(5,2)=fire2&(5,2)+5
      ALINE fire2&(5,1),fire2&(5,2),fire2&(5,1),fire2&(5,2)-5,12,&HFFFF,0
      IF fire2&(5,2)>199
        a5|=0
      ELSE
        xpoint&=fire2&(5,1)-x&
        IF xpoint&<10 AND xpoint&>=0
          ypoint&=fire2&(5,2)-y&
          IF ypoint&<10 AND ypoint&>=0
            DEC hp&
            a5|=0
            IF hp&=0
              RC_COPY image%,32,0,16,16 TO ecran1%,x&,y&
              @youlose
            ENDIF
          ENDIF
        ENDIF
      ENDIF
    ENDIF
    ' *------------------------------------*
    '
    '  ð Test collisions tirs du vaisseau ð
    '
    ' *------------------------------------*
    IF b1|=1
      xpoint&=fire1&(1,1)-x2&
      IF xpoint&<10 AND xpoint&>=0
        ypoint&=fire1&(1,2)-y2&
        IF ypoint&<10 AND ypoint&>=0
          b1|=0
          DEC ehp&
          IF ehp&=0
            RC_COPY image%,32,0,16,16 TO ecran1%,x2&,y2&
            IF level&<5
              @next_level
              GOTO newlevel
            ELSE
              @youwin
            ENDIF
          ENDIF
        ENDIF
      ENDIF
    ENDIF
    IF b2|=1
      xpoint&=fire1&(2,1)-x2&
      IF xpoint&<10 AND xpoint&>=0
        ypoint&=fire1&(2,2)-y2&
        IF ypoint&<10 AND ypoint&>=0
          b2|=0
          DEC ehp&
          IF ehp&=0
            RC_COPY image%,32,0,16,16 TO ecran1%,x2&,y2&
            IF level&<5
              @next_level
              GOTO newlevel
            ELSE
              @youwin
            ENDIF
          ENDIF
        ENDIF
      ENDIF
    ENDIF
    IF b3|=1
      xpoint&=fire1&(3,1)-x2&
      IF xpoint&<10 AND xpoint&>=0
        ypoint&=fire1&(3,2)-y2&
        IF ypoint&<10 AND ypoint&>=0
          b3|=0
          DEC ehp&
          IF ehp&=0
            RC_COPY image%,32,0,16,16 TO ecran1%,x2&,y2&
            IF level&<5
              @next_level
              GOTO newlevel
            ELSE
              @youwin
            ENDIF
          ENDIF
        ENDIF
      ENDIF
    ENDIF
    IF b4|=1
      xpoint&=fire1&(4,1)-x2&
      IF xpoint&<10 AND xpoint&>=0
        ypoint&=fire1&(4,2)-y2&
        IF ypoint&<10 AND ypoint&>=0
          b4|=0
          DEC ehp&
          IF ehp&=0
            RC_COPY image%,32,0,16,16 TO ecran1%,x2&,y2&
            IF level&<5
              @next_level
              GOTO newlevel
            ELSE
              @youwin
            ENDIF
          ENDIF
        ENDIF
      ENDIF
    ENDIF
    IF b5|=1
      xpoint&=fire1&(5,1)-x2&
      IF xpoint&<10 AND xpoint&>=0
        ypoint&=fire1&(5,2)-y2&
        IF ypoint&<10 AND ypoint&>=0
          b5|=0
          DEC ehp&
          IF ehp&=0
            RC_COPY image%,32,0,16,16 TO ecran1%,x2&,y2&
            IF level&<5
              @next_level
              GOTO newlevel
            ELSE
              @youwin
            ENDIF
          ENDIF
        ENDIF
      ENDIF
    ENDIF
  ELSE
    '
    '
    '
    shipon=0
    FOR i|=1 TO level&*5
      IF obs&(i|,1)=12
        INC shipon
        GOTO nexti
      ENDIF
      IF obs&(i|,1)<4
        obs&(i|,3)=obs&(i|,3)+obs&(i|,1)*4
      ELSE
        obs&(i|,3)=obs&(i|,3)+6
      ENDIF
      '
      ' *------------------------*
      '
      '  ð Nouvel ennemi ou Bonus
      '
      ' *------------------------*
      '
      IF obs&(i|,3)>=185
        '
      newobj:
        '
        obs&(i|,1)=INT(RND*11)+1
        obs&(i|,2)=INT(RND*305)+1
        obs&(i|,3)=0
        IF (TIMER-startime%)/200>level&*30
          obs&(i|,1)=12
        ENDIF
      ENDIF
      '
      ' *---------------------------------------------*
      '
      '  ð Test collision Vaisseau <-> Ennemi ou Bonus
      '
      ' *---------------------------------------------*
      '
      xpoint&=obs&(i|,2)-x&
      IF xpoint&>=0 AND xpoint&<16
        ypoint&=obs&(i|,3)-y&
        IF ypoint&>=0 AND ypoint&<16
          ' *--- Energie -1 ---*
          IF obs&(i|,1)<9
            DEC hp&
            IF hp&<1
              @youlose
              @fin
            ELSE
              GOTO newobj
            ENDIF
          ELSE
            ' *--- Energie + xxx ---*
            IF obs&(i|,1)=11
              s=32-hp&
              hp&=hp&+(s/2)
              GOTO newobj
            ENDIF
            ' *--- Munition + 50 ---*
            IF obs&(i|,1)=10
              ADD shot&,50
              IF shot&>200
                shot&=200
                GOTO newobj
              ENDIF
            ENDIF
            ' *--- Points + 10 ---*
            IF obs&(i|,1)=9
              ADD points&,10
            ENDIF
          ENDIF
        ENDIF
      ENDIF
      '
      ' *---------------------------*
      '
      '  ð Affichage ennemis & Bonus
      '
      ' *---------------------------*
      '
      IF obs&(i|,1)=1 OR obs&(i|,1)=4
        RC_COPY image%,48,0,16,16 TO ecran1%,obs&(i|,2),obs&(i|,3)
      ELSE
        IF obs&(i|,1)=2 OR obs&(i|,1)=5
          RC_COPY image%,64,0,16,16 TO ecran1%,obs&(i|,2),obs&(i|,3)
        ELSE
          IF obs&(i|,1)=3 OR obs&(i|,1)=6
            RC_COPY image%,80,0,16,16 TO ecran1%,obs&(i|,2),obs&(i|,3)
          ELSE
            IF obs&(i|,1)=7
              RC_COPY image%,128,0,16,16 TO ecran1%,obs&(i|,2),obs&(i|,3)
            ELSE
              IF obs&(i|,1)=8
                RC_COPY image%,144,0,16,16 TO ecran1%,obs&(i|,2),obs&(i|,3)
              ELSE
                IF obs&(i|,1)=9
                  RC_COPY image%,160,0,16,16 TO ecran1%,obs&(i|,2),obs&(i|,3)
                ELSE
                  IF obs&(i|,1)=10
                    RC_COPY image%,96,0,16,16 TO ecran1%,obs&(i|,2),obs&(i|,3)
                  ELSE
                    IF obs&(i|,1)=11
                      RC_COPY image%,112,0,16,16 TO ecran1%,obs&(i|,2),obs&(i|,3)
                    ENDIF
                  ENDIF
                ENDIF
              ENDIF
            ENDIF
          ENDIF
        ENDIF
      ENDIF
      '
      IF b1|=1
        xpoint&=fire1&(1,1)-obs&(i|,2)
        IF xpoint&<10 AND xpoint&>=0
          ypoint&=fire1&(1,2)-obs&(i|,3)
          IF ypoint&<10 AND ypoint&>=0
            b1|=0
            INC points&
            GOTO newobj
          ENDIF
        ENDIF
      ENDIF
      IF b2|=1
        xpoint&=fire1&(2,1)-obs&(i|,2)
        IF xpoint&<10 AND xpoint&>=0
          ypoint&=fire1&(2,2)-obs&(i|,3)
          IF ypoint&<10 AND ypoint&>=0
            b2|=0
            INC points&
            GOTO newobj
          ENDIF
        ENDIF
      ENDIF
      IF b3|=1
        xpoint&=fire1&(3,1)-obs&(i|,2)
        IF xpoint&<10 AND xpoint&>=0
          ypoint&=fire1&(3,2)-obs&(i|,3)
          IF ypoint&<10 AND ypoint&>=0
            b3|=0
            INC points&
            GOTO newobj
          ENDIF
        ENDIF
      ENDIF
      IF b4|=1
        xpoint&=fire1&(4,1)-obs&(i|,2)
        IF xpoint&<10 AND xpoint&>=0
          ypoint&=fire1&(4,2)-obs&(i|,3)
          IF ypoint&<10 AND ypoint&>=0
            b4|=0
            INC points&
            GOTO newobj
          ENDIF
        ENDIF
      ENDIF
      IF b5|=1
        xpoint&=fire1&(5,1)-obs&(i|,2)
        IF xpoint&<10 AND xpoint&>=0
          ypoint&=fire1&(5,2)-obs&(i|,3)
          IF ypoint&<10 AND ypoint&>=0
            b5|=0
            INC points&
            GOTO newobj
          ENDIF
        ENDIF
      ENDIF
    nexti:
    NEXT i|
    IF shipon=level&*4
      eship=0
      x2&=160
      y2&=10
    ENDIF
  ENDIF
  @test_touches
LOOP
'
> PROCEDURE vaisseau
  ' *-----------------------*
  '  ð Affiche le vaisseau ð
  ' *-----------------------*
  IF momentum<>0
    SELECT vdir
    CASE 1
      y&=y&-momentum
    CASE 2
      y&=y&+momentum
    ENDSELECT
  ENDIF
  IF hmomentum<>0
    SELECT hdir
    CASE 1
      ADD x&,hmomentum
    CASE 2
      SUB x&,hmomentum
    ENDSELECT
  ENDIF
  IF y&>184
    y&=185
    vdir=1
    momentum=0
  ENDIF
  IF y&<11
    y&=10
    vdir=2
    momentum=0
  ENDIF
  IF x&<11
    x&=10
    hdir=1
    hmomentum=0
  ENDIF
  IF x&>299
    x&=300
    hdir=2
    hmomentum=0
  ENDIF
  RC_COPY image%,0,0,16,16 TO ecran1%,x&,y&
RETURN
> PROCEDURE test_touches
  '
  ' *--------------------------------*
  '
  '  ð Test des touches & du Joypad ð
  '
  ' *--------------------------------*
  '
  t|=BYTE{&HFFFFC02}                 ! Test du clavier
  '
  SDPOKE &HFF9202,&HFFFE             ! Test du Joypad
  result1=DPEEK(&HFF9200)
  result2=DPEEK(&HFF9202)
  '
  pause!=BTST(result1,0)             ! Pause
  fire_a!=BTST(result1,1)            ! Fire A
  j_up!=BTST(result2,8)              ! Up
  j_down!=BTST(result2,9)            ! Down
  j_left!=BTST(result2,10)           ! Left
  j_right!=BTST(result2,11)          ! Right
  '
  ' *--- Haut ---*
  IF t|=104 OR NOT (j_up!)
    SELECT vdir
    CASE 1
      INC momentum
    CASE 2
      DEC momentum
      IF momentum=0
        vdir=1
      ENDIF
    ENDSELECT
  ENDIF
  ' *--- Bas ---*
  IF t|=110 OR NOT (j_down!)
    SELECT vdir
    CASE 1
      DEC momentum
      IF momentum=0
        vdir=2
      ENDIF
    CASE 2
      INC momentum
    ENDSELECT
  ENDIF
  ' * --- Droite ---*
  IF t|=108 OR NOT (j_right!)
    SELECT hdir
    CASE 1
      INC hmomentum
    CASE 2
      DEC hmomentum
      IF hmomentum=0
        hdir=1
      ENDIF
    ENDSELECT
  ENDIF
  ' *--- Gauche ---*
  IF t|=106 OR NOT (j_left!)
    SELECT hdir
    CASE 1
      DEC hmomentum
      IF hmomentum=0
        hdir=2
      ENDIF
    CASE 2
      INC hmomentum
    ENDSELECT
  ENDIF
  ' *--- Tir (5 max) ---*
  IF t|=57 OR NOT (fire_a!)
    IF b1|=0
      fire1&(1,1)=x&+5
      fire1&(1,2)=y&
      b1|=1
      DEC shot&
      GOTO skip2
    ENDIF
    IF b2|=0
      fire1&(2,1)=x&+5
      fire1&(2,2)=y&
      b2|=1
      DEC shot&
      GOTO skip2
    ENDIF
    IF b3|=0
      fire1&(3,1)=x&+5
      fire1&(3,2)=y&
      b3|=1
      DEC shot&
      GOTO skip2
    ENDIF
    IF b4|=0
      fire1&(4,1)=x&+5
      fire1&(4,2)=y&
      b4|=1
      DEC shot&
      GOTO skip2
    ENDIF
    IF b5|=0
      fire1&(5,1)=x&+5
      fire1&(5,2)=y&
      b5|=1
      DEC shot&
      GOTO skip2
    ENDIF
  ENDIF
  ' *--- Quitter ---*
  IF t|=102
    GOSUB youlose
  ENDIF
  '
skip2:
  SELECT vdir
  CASE 1
    y&=y&-momentum
  CASE 2
    y&=y&+momentum
  ENDSELECT
  SELECT hdir
  CASE 1
    x&=x&+hmomentum
  CASE 2
    x&=x&-hmomentum
  ENDSELECT
RETURN
PROCEDURE youlose
  ' *-------*
  '   Perdu
  ' *-------*
  ' CALL dsp_stop%
  ' ~C:depack%(L:mod_fin%,L:mod%)
  ' ~C:dsp_play%(L:mod%)
  DEFTEXT 255,0,0,4
  you$="co2fd40lt90fd20rt90fd20bk20rt90fd40lt90fd20purt90fd10rt90pdfd60lt90fd40lt90fd60lt90fd40bk40rt180pufd10rt90pdfd60lt90fd40lt90fd60"
  lose$="co2rt180fd60lt90fd40pufd10lt90pdfd60rt90fd40rt90fd60rt90fd40bk40rt180pufd10pdfd40lt90fd30lt90fd40rt90fd30rt90fd40pufd10pdfd40bk40rt90fd30lt90fd30bk30rt90fd30lt90fd40"
  ' *--- YOU ---*
  FOR a=1 TO 360 STEP 8
    @permute_ecrans
    @etoiles
    SETDRAW 50,80,a
    DRAW you$
  NEXT a
  ' *--- LOSE ---*
  FOR a=1 TO 360 STEP 8
    @permute_ecrans
    @etoiles
    SETDRAW 50,80,360
    DRAW you$
    SETDRAW 120,110,a
    DRAW lose$
  NEXT a
  ' *--- YOU LOSE ---*
  REPEAT
    @permute_ecrans
    @etoiles
