#
#
#
# Vectors
# ------------------------------------------
VECTORS_OBJECT=RANDOM        # can be DEFAULT, FUJILOGO, BUSYBEE, ENTROPY, or RANDOM
VECTORS_ROTATION_SPEED_X=2
VECTORS_ROTATION_SPEED_Y=4
VECTORS_ROTATION_SPEED_Z=5
VECTORS_DELAY=0              # (0 ms to 200 ms)
VECTORS_USE_OFFSCREEN=TRUE   # offscreen bitmap may not work with old VDI
VECTORS_USE_MONOCHROME=FALSE
VECTORS_CLIPPED=FALSE        # (TRUE by default, 400*400px | FALSE, whole window and zoomed)
#
#
#
# Atari Poink
# (colors cycle only in 16 and 256 colors)
# ------------------------------------------
POINK_DELAY=6    # (0 ms to 200 ms)
