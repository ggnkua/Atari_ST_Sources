Reserve 33000
Dim Nam$(9,1)
If Exist("MANAGER.INF")=False
  Alert 2,"Ich kann die Datei|MANAGER.INF nicht finden !",1,"Abbruch",Wahl
Endif
Open "I",#1,"MANAGER.INF"
For X%=0 To 9
  Line Input #1,Nam$(X%,0)
  Line Input #1,Nam$(X%,1)
Next X%
Close #1
Do
  Cls
  Print "******************************** Programm-Manager ******************************";
  Print "Auswahl von Programmen leicht gemacht, (C) 1987/1988 by Ulrich Veigel"
  Print "Programm-Manager ist Bestandteil von CIP ST Nr. 3,"
  Print "er darf nur mit CIP ST Nr. 3 weitergegeben werden !"
  Print
  Print "Bitte w„hlen Sie:"
  Print
  Print
  For Y%=0 To 9
    Print Y%,Nam$(Y%,0)
  Next Y%
  Print
  Print "F","Freie Wahl"
  Print
  Print "Ž","Žndern"
  Print
  Print "E","Programm Manager beenden"
  Repeat
    A$=Upper$(Inkey$)
  Until A$="0" Or (Val(A$)<=10 And Val(A$)>0) Or A$="E" Or A$="Ž" Or A$="F"
  If A$="E"
    End
  Endif
  If A$="F"
    Cls
    Fileselect "\*.PRG","",Dat$
    Exec 0,Dat$,"",""
  Else
    If A$="Ž"
      @Aendern
    Else
      Cls
      Exec 0,Nam$(Val(A$),1),"",""
    Endif
  Endif
Loop
Procedure Aendern
  Input "Welche Nummer wollen Sie „ndern:",Nummer
  Cls
  Fileselect "\*.*","",Aen$
  Print Aen$,"Kommentar:";
  Form Input 20,Kommentar$
  Alert 2,"Stimmt's ?",1,"Ja|Nein",Wahl
  If Wahl=1
    Nam$(Nummer,0)=Kommentar$
    Nam$(Nummer,1)=Aen$
    @Speichern
  Endif
Return
Procedure Speichern
  Open "O",#1,"MANAGER.INF"
  For X%=0 To 9
    Print #1,Nam$(X%,0)
    Print #1,Nam$(X%,1)
  Next X%
  Close
Return
