'
' ************************************************
' *  U T I L I T Y "BAS-VAR-READ" unter DEFLIST  *
' ************************************************
'
Dim A$(1000)
Again:
Fileselect "\*.Bas","",Selected$
If Selected$="\"
  Goto Again
Endif
If Selected$=""
  Edit
Endif
Open "U",#1,Selected$
Open "O",#2,"vars.map"
Alert 1,"Taste drcken = ABBRUCH",1,"OKAY",Uu
Repeat
  Zeichen%=Inp(#1)
  If Zeichen%>31
    Aa=0
    B$=Chr$(Zeichen%)
    A$(X)=A$(X)+B$
  Else
    If Aa=0
      Aa=1
      Print #2;A$(X);"  ";
      Print A$(X),
      Inc X
    Endif
    Inc Aa
  Endif
Until Mousek Or Len(Inkey$)
Close
Open "U",#1,"vars.map"
For I=1 To Lof(#1)
  Zeichen%=Inp(#1)
  If Chr$(Zeichen%)<>" "
    Aa=0
    A$(Xx)=A$(Xx)+Chr$(Zeichen%)
  Else
    If Aa=0
      Inc Xx
    Endif
    Aa=1
    Inc Xx
  Endif
  Inc Aa
Next I
Close #1
Alert 2,"Drucker oder Monitor?",0,"Drucker|Monitor",U
For I=0 To Xx
  If U=1
    Lprint A$(I),
  Else
    Print A$(I),
  Endif
Next I
Alert 1,"READY !!      ",1,"OKAY",U
Edit
