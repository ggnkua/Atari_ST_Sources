> PROCEDURE einfuehrung
  einfuehrung=TRUE
  DO
    RESTORE einfuehrung
    REPEAT
      REPEAT
        READ s,ueb$
      UNTIL s=stufe OR s=9
      IF s<9
        FOR s=1 TO LEN(ueb$)
          x$=MID$(ueb$,s,1)
          GOSUB hilfe
          EXIT IF ASC(a$)=27
        NEXT s
      ENDIF
    UNTIL ASC(a$)=27 OR s=9
    EXIT IF ASC(a$)=27
  LOOP
  einfuehrung=FALSE
  CLS
  PAUSE 20
RETURN
