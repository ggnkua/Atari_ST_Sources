  NEXT s
RETURN
> PROCEDURE speicher_einlesen
  s=-1
  vo=-1
  kko=-1
  gko=-1
  ze=-1
  DO
    INC s
    IF stufe(s)<=stufe
      IF art$(s)="vo" AND NOT shift(s)
        INC vo
        vok$(vo)=a$(s)
      ENDIF
      IF art$(s)="ko" AND shift(s)
        INC gko
        grosskon$(gko)=a$(s)
      ENDIF
      IF art$(s)="ko" AND NOT shift(s)
        INC kko
        kleinkon$(kko)=a$(s)
      ENDIF
      IF art$(s)="ze"
        INC ze
        zeich$(ze)=a$(s)
      ENDIF
    ENDIF
    EXIT IF a$(s)="ende"
  LOOP
  INC vo
  INC gko
  INC kko
  INC ze
RETURN
