    zeit=1000
    treffer=0
    BOX 280,252,340,274
    DO
      PRINT AT(35,8);treffer'"Treffer  "
      x$=spielzeichen$(RANDOM(x)+1)
      TEXT 300,200,x$
      REPEAT
        a$=INKEY$
        ' ----------------------
        IF a$="Ñ"          ! diese Zeilen ersetzen das Kommando A$=Upper$(A$),
          a$="é"           ! das leider nicht vom Compiler verstanden wird.
        ENDIF
        IF a$="î"
