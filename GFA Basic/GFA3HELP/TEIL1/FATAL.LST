' FATAL - Beispiel:
'
ON ERROR GOSUB fehler
POKE 0,1
label1:
DPOKE 11111,1
label2:
MONITOR
label3:
PRINT SQR(-100)
PRINT 0/0
PRINT "Programm geht ab hier weiter!"
PROCEDURE fehler
  PRINT "ERR : ";ERR''
  '    ~FORM_ALERT(1,err$) !  fr V3.0
  IF ERR>101
    PRINT "Fatal-Error"
    PRINT "Inhalt von D0 bis D7 :"
    FOR i%=0 TO 7
      PRINT LEFT$(STR$(LPEEK(900+i%*4))+STRING$(8,32),8);
    NEXT i%
    PRINT CHR$(10);CHR$(13);STRING$(60,"-")
    PRINT "Inhalt von A0 bis A6 :"
    FOR i%=0 TO 6
      PRINT LEFT$(STR$(LPEEK(932+i%*4))+STRING$(8,32),8);
    NEXT i%
    PRINT CHR$(10);CHR$(13);STRING$(60,"=")
    ON ERROR GOSUB fehler
    IF ERR=102
      RESUME label1
    ENDIF
    IF ERR=103
      RESUME label2
    ENDIF
    IF ERR=104
      RESUME label3
    ENDIF
  ELSE
    ON ERROR GOSUB fehler
    PRINT "Normal-Error!"
    RESUME NEXT
  ENDIF
RETURN
