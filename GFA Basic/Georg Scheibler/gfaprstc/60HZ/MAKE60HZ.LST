'
starter:
ALERT 1,"Bitte zu bearbeitende|Disk einlegen.",1,"Ok|Exit",a
IF a=2
  END
ENDIF
a$=SPACE$(512)
' Schaffe Raum fr einen Diskettenblock
v=XBIOS(8,L:VARPTR(a$),L:1,0,1,0,0,1)
'   Lies den ersten Block der Diskette
IF v<0
  ALERT 3,"Parameterblock nicht lesbar!",1,"Ok",a
  ' Fehler beim lesen
  GOTO starter
ENDIF
s=0
FOR i=1 TO 512 STEP 2
  s=(s+ASC(MID$(a$,i))*256+ASC(MID$(a$,i+1))) AND 65535
  ' Bilde die Quersumme ber alle Daten des ersten Blocks
NEXT i
'    Wenn Summe=$1234, dann ist der Block ausfhrbar
IF s=&H1234
  ALERT 3,"Bootblock existiert bereits!|Soll die Ausfhrung umgeleitet|werden?",1,"Ja|Nein|Exit",a
  IF a=2
    a=0
  ENDIF
  IF a=3
    GOTO starter
  ENDIF
  IF a=1 AND ASC(a$)<>96
    ' Seltener Fall: der Block ist ausfhrbar, aber der erste Befehl
    ' ist kein Branch - da kann man nichts machen
    ' Oder ist die Disk bereits auf 60 Hz?
    ALERT 3,"Patchen kann nicht|durchgefhrt werden!",1,"Exit",a
    GOTO starter
  ENDIF
  sc=ASC(MID$(a$,2))
  '  Sc enth„lt die Startadresse des alten Bootprogramms-2
ELSE
  a=0
ENDIF
b$=MID$(a$,3,6)
b$=""
RESTORE
FOR i=1 TO 6
  READ c
  b$=b$+CHR$(c)
NEXT i
' Hier steht das Maschinenprogramm:
DATA &h42,&h38,&h82,&h0a
'                 clr.b $ff820a.w
DATA &h4e,&h75
'                 rts
IF a=1
  b$=LEFT$(b$,4)+CHR$(&H60)+CHR$(sc-4)
  '               wenn der Bootblock bereits ausfhrbar ist:
  '               Branch zum Urprogramm ersetzt das RTS
ENDIF
a$=b$+MID$(a$,7)
' Ersetzt die ersten 6 Bytes im Bootblock durch das Maschinenprogramm
s=0
FOR i=1 TO 510 STEP 2
  s=(s+ASC(MID$(a$,i))*256+ASC(MID$(a$,i+1))) AND 65535
NEXT i
s=(&H1234-s) AND 65535
b$=CHR$(s/256)+CHR$(s AND 255)
a$=LEFT$(a$,510)+b$
' Berechnet ein Wort und fgt es am Schlu in den Bootblock ein,
' Damit die Quersumme $1234 ist (=> Block ausfhrbar)
v=XBIOS(9,L:VARPTR(a$),L:1,0,1,0,0,1)
' Schreibt den ersten Block wieder zurck
IF v<0
  ALERT 3,"Bootblock konnte nicht|geschrieben werden.",1,"Ok",a
  ' Fehler beim Zurckschreiben - vielleicht Diskette geschtzt?
ENDIF
GOTO starter
