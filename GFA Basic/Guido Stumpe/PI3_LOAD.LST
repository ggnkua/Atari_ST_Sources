DIM smfdb%(8),dmfdb%(8),p%(8)
va%=INT{L~A-4}
ha%=INT{L~A-12}
'
offset%=34
start:
CLS
PRINT AT(1,1);" PI3 - Loader fr BIGSCREEN // OVERSCAN 2.01 // Grožmonitore "
PRINT AT(1,2);" Guido Stumpe in 3/90                       "
PRINT AT(24,2);" HA = ";ha%;"  VA = ";va%
'
FILESELECT "A:\*.PI3","",bild$
IF LEN(bild$)>0
  IF EXIST(bild$)
    lade$=""
    lade$=SPACE$(32000+offset%)
    BLOAD bild$,VARPTR(lade$)
    lade$=RIGHT$(lade$,32000)
  ENDIF
ENDIF
'
CLS
'
IF ha%>640 OR va%>400
  smfdb%(0)=V:lade$
  smfdb%(1)=640
  smfdb%(2)=400
  smfdb%(3)=40
  smfdb%(4)=0
  smfdb%(5)=1
  '
  dmfdb%(0)=XBIOS(2)
  dmfdb%(1)=va%
  dmfdb%(2)=ha%
  dmfdb%(3)=(va%/16)
  dmfdb%(4)=0
  dmfdb%(5)=1
  '
  p%(0)=0
  p%(1)=0
  p%(2)=640
  p%(3)=400
  p%(4)=0
  p%(5)=0
  p%(6)=640
  p%(7)=400
  p%(8)=3
  '
  BITBLT smfdb%(),dmfdb%(),p%()
ELSE
  SPUT lade$
ENDIF
lade$=""
'
DEFMOUSE 0
DO
  MOUSE x%,y%,k%
  IF k%=1
    GOTO start
  ENDIF
  IF k%=2
    END
  ENDIF
LOOP
