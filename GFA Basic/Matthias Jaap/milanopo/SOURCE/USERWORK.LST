ENDIF
ENDIF
RETURN 0
ELSE IF cmd$="NEW"
player_win&=@win_open_dialog(2,player&,icfyicon&)
RETURN 0
ELSE IF cmd$="QUIT"
exit_program!=TRUE
RETURN 0
ENDIF
