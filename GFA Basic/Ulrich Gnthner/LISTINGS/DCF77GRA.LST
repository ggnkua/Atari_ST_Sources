c|=0
FOR i=PI TO -PI STEP -2*PI/60
  SELECT c|
  CASE 0,5,10,15,20,25,30,35,40,45,50,55
    r|=2
  DEFAULT
    r|=1
  ENDSELECT
  x=x_k*rad&*SIN(i)+mix&
