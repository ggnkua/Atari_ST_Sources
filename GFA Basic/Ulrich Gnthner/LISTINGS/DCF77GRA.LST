UNTIL STICK(1)=1
REPEAT
  IF SUB(TIMER,at%)>600
    FOR l|=0 TO 3
      PRINT AT(2,3+l|);te$(l|);
    NEXT l|
    PAUSE 500
    STICK 0
    EDIT
  ENDIF
UNTIL STICK(1)=0
vk|=2
DEFFILL 1,2,8
LINE mix&,miy&-5,mix&,miy&+5
