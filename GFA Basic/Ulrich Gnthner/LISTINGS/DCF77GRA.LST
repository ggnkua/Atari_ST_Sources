PRINT AT(2,2);ti4$;
DIM bi|(60)
DIM w$(7)
DIM zon$(2)
w$(1)="Montag"
w$(2)="Dienstag"
w$(3)="Mittwoch"
w$(4)="Donnerstag"
w$(5)="Freitag"
w$(6)="Samstag"
w$(7)="Sonntag"
zon$(1)="MEZ"
zon$(0)="MESZ"
DIM i$(60)
DIM te$(4)
te$(0)="Es werden keine Taktimpulse empfangen !"
te$(1)="Empf„nger und Kabelverbindung prfen !"
