te$(3)="Rote LED muž im Sekundenrythmus blinken!"
fl!=FALSE
at%=TIMER
REPEAT
  IF SUB(TIMER,at%)>600
    FOR l|=0 TO 3
      PRINT AT(2,3+l|);te$(l|);
    NEXT l|
    PAUSE 500
