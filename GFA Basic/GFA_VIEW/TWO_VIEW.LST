par%(5)=gy&                   ! Y1-Ziel
par%(6)=ADD(gx&,PRED(ab&))    ! X2-Ziel
par%(7)=ADD(gy&,PRED(ah&))    ! Y2-Ziel
par%(8)=3                     ! Modus
'
~GRAF_MOUSE(256,0)            ! HIDEM
'
BITBLT q_ras%(),z_ras%(),par%()
'
~GRAF_MOUSE(257,0)            ! SHOWM
'
ENDIF
'
RETURN
