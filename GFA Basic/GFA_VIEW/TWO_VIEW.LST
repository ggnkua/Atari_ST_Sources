> PROCEDURE menu_auswerten(nr&)
  LOCAL a$,b$
  '
  ' Wertet einen angeklickten MenÅpunkt aus. Wird auch von 'tastatur_
  ' auswerten' aufgerufen.
  ' --------------------------------------------------
  SELECT nr&
    '
  CASE m_about|
    RESTORE version
    READ a$,b$
    ~FORM_ALERT(1,"[1][TWO-VIEW v"+a$+"|"+b$+" Two-in-One |Ω93/94 Gregor Duchalski, Im|Wiescherfeld 21, D-44627 Herne|eMail: @do.maus.ruhr.de][  OK  ]")
    '
  CASE m_open|
    IF @t_laden("")=0
      set_vslider(w_handle&)                         ! Slider setzen
      fenster_redraw(w_handle&,wa_x&,wa_y&,wa_w&,wa_h&)
    ENDIF
    '
  CASE m_save|
    inf_sichern
    '
  CASE m_quit|
    prg_exit!=TRUE
    '
  ENDSELECT
  '
  MENU OFF
  '
RETURN
