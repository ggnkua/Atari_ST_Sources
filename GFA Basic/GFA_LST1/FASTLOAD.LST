' šberprft/Setzt das FASTLOAD-Flag im Programmheader (1=an/0=aus)...
'
> FUNCTION check_fastload(a$)
  '
  a%=0
  '
  OPEN "U",#1,a$
  SEEK #1,&H16
  BGET #1,V:a%,4
  CLOSE #1
  '
  RETURN -a%
ENDFUNC
'
> PROCEDURE set_fastload(a$,a%)
  '
  a%=ABS(a%)
  '
  OPEN "U",#1,a$
  SEEK #1,&H16
  BPUT #1,V:a%,4
  '
  CLOSE #1
  '
RETURN
