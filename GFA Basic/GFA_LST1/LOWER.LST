> FUNCTION lower$(b$)
  LOCAL i|,adr%,asc|,offset
  %adr%=V:b$
  FOR i|=0 TO PRED(LEN(b$))
   offset%=adr%+i|
   asc|=BYTE{offset%}
   SELECT asc|
   CASE 65 TO 90
    BYTE{offset%}=asc|+32
   CASE 128
    BYTE{offset%}=asc|+7
   CASE 142
    BYTE{offset%}=asc|-10
   CASE 143
    BYTE{offset%}=asc|-9
   CASE 144
    BYTE{offset%}=asc|-14
   CASE 146,165,181,193
    BYTE{offset%}=asc|-1
   CASE 153
    BYTE{offset%}=asc|-5
   CASE 154
    BYTE{offset%}=asc|-25
   CASE 178
    BYTE{offset%}=asc|+1
   CASE 182
    BYTE{offset%}=asc|-49
   CASE 183,184
    BYTE{offset%}=asc|-7
   ENDSELECT
  NEXT i|
 RETURN b$
ENDFUNC
