'
' procedure um ST-ASCII-code an drucker-ASCII-code anzupassen
'
' 08.01.1992  Lars van Straelen & Sandro Lucifora   fr  TOS
'
'
DIM zeichentab$(255)                    ! feld dimensionieren
FOR i%=0 TO 255                         ! \
  zeichentab$(i%)=CHR$(i%)              !  > grundbelegung
NEXT i%                                 ! /
'
zeichentab$(65)=CHR$(66)                   ! B fr A wandeln
zeichentab$(221)=CHR$(28)+CHR$(69)+CHR$(1) ! 'Ý' fr schriftbreite doppelt wandeln
zeichentab$(64)=CHR$(28)+CHR$(69)+CHR$(0)  ! '@' fr schriftbreite normal wandeln
'
@lprint("ÝTOS-@MAGAZIN")                      ! procedure aufrufen
'
PROCEDURE lprint(text$)
  LOCAL i%
  '
  FOR i%=1 TO LEN(text$)                        ! \  text mit gewandelter
    LPRINT zeichentab$(ASC(MID$(text$,i%)));    !  > zeichentabelle
  NEXT i%                                       ! /  ausgeben
  '
  LPRINT                                        ! drucker zur ausgabe zwingen CR LF
RETURN
