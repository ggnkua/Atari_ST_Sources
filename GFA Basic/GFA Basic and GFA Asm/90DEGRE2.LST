' 90DEGRE2.LST
' ------------
DEFFILL 1,3,8
PBOX 0,0,399,399
DEFTEXT 1,0,0,32
TEXT 10,50,"Ce graphique"
TEXT 10,90,"va pivoter."
GET 0,0,399,399,a$
a%=VARPTR(a$)+6
ALERT 2,"",0,"TOURNER|ANNULER",d%
'
IF d%=2
  EDIT
ENDIF
CLS
'
yy%=399
xx%=0
FOR y%=a% TO a%+19999 STEP 50
  FOR x%=y% TO y%+49 STEP 2
    p%=DPEEK(x%)
    l%=DPEEK(x%) AND 32767
    IF l%>0
      DEFLINE -l%
      LINE xx%,yy%,xx%,yy%-15
    ENDIF
    IF p%>32767
      DEFLINE 1
      PLOT x%,yy%
    ENDIF
    SUB yy%,16
    IF yy%<0
      yy%=399
      INC xx%
    ENDIF
  NEXT x%
NEXT y%
