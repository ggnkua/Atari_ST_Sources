> PROCEDURE in(aa,x,y,cc,dd,text$,VAR bb)
  LOCAL t$,a$
  DEFLINE 1,1
  COLOR 0
  BOX boite(choix,1),boite(choix,2)+2,boite(choix,3),boite(choix,4)+2
  DEFTEXT 1,0,0,4
  TEXT x,y,text$
  PAUSE 10
  REPEAT
    a$=INKEY$
    IF a$<>""
      t$=t$+a$
    ENDIF
    t$=RIGHT$(t$,cc)
    TEXT x,y,t$
  UNTIL STRIG(1)<>0
  IF t$<>""
    bb=VAL(t$)
