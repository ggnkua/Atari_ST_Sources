> PROCEDURE couleur(mode,mode1)
  IF mode=0 OR mode=1 THEN
    c=pos(h+1,hh)+6
    m=8
    SELECT c
    CASE 16 TO 20
      m=8
    CASE 21 TO 25
      m=7
    CASE 26 TO 35
      m=6
    CASE 36 TO 40
      m=4
    CASE 41 TO 45
      m=1
    ENDSELECT
  ENDIF
  '
  IF pos(h+1,hh)+6>15
    c=15
  ENDIF
  IF pos(h+1,hh)+6<1
    c=1
  ENDIF
  '
  IF mode=1
    IF pos(h,hh)>pos(h+1,hh) AND pos(h+1,hh)+6>16
      c=14
    ENDIF
    IF pos(h,hh)>pos(h+1,hh+1) AND pos(h+1,hh+1)+6>20
      c=13
    ENDIF
  ENDIF
  '
  DEFFILL c,2,m
  IF mode1=1
    COLOR c-1
  ENDIF
RETURN
> PROCEDURE zoom(l,k,n)
  LOCAL h,hh
  DEFFILL 1,2,4
  COLOR 1
  IF carte=1
    @efface1
    @palinit
    PAUSE 20
    HIDEM
    @screen(1)
    @screen(2)
    REPEAT
      PBOX 0,0,320,200
      PUT 1,1,carte$
      BOX MOUSEX,MOUSEY,MOUSEX+l/2,MOUSEY+k/2
      xx=MOUSEX
      yy=MOUSEY
      @screen(2)
      VSYNC
      VSYNC
    UNTIL STRIG(1)<>0 AND xx<l/2 AND yy<k/2
    @screen(0)
    '
    FOR h=0 TO l STEP 2
      FOR hh=0 TO k STEP 2
        pos(h,hh)=pos(xx+h/2,yy+hh/2)
      NEXT hh
    NEXT h
    FOR h=1 TO l-1 STEP 2
      FOR hh=0 TO k STEP 2
        pos(h,hh)=(pos(h-1,hh)+pos(h+1,hh))*0.5
      NEXT hh
    NEXT h
    FOR h=0 TO l
      FOR hh=1 TO k-1 STEP 2
        pos(h,hh)=(pos(h,hh-1)+pos(h,hh+1))*0.5
      NEXT hh
    NEXT h
    choix=8
    CLR carte,carte13d,carte23d,carte33d,carte43d,carte53d,carte63d
    @carte(l,k,n)
  ENDIF
RETURN
