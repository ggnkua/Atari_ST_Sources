> PROCEDURE ecart(l,k)
  LOCAL h,hh,max,min
  FOR h=0 TO l
    FOR hh=0 TO k
      IF pos(h,hh)>max THEN
        max=pos(h,hh)
      ENDIF
      IF pos(h,hh)<min THEN
        min=pos(h,hh)
      ENDIF
    NEXT hh
  NEXT h
  COLOR 1
  DEFFILL 0
  DEFLINE 1,1
  DEFTEXT 1,0,0,4
  PBOX 3,50,125,90
  BOX 3,50,125,90
  TEXT 5,60,90,"le minimun est ... "
  TEXT 95,60,TRUNC(min)
  TEXT 5,70,90,"le maximun est ... "
  TEXT 95,70,TRUNC(max)
  TEXT 5,80,90,"ecart maxi est ... "
  TEXT 95,80,TRUNC(max-min)
RETURN
