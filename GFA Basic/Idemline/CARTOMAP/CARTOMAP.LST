> PROCEDURE generer(l,k,n,f)
  LOCAL h,hh,hhh
  IF gener=1 THEN
    ERASE pos(),pos1(),pos2()
  ENDIF
  DIM pos(l,k),pos1(l,k),pos2(l,k)
  gener=1
  CLR carte,carte13d,carte23d,carte33d,carte43d,carte53d,carte63d
  @efface1
  @palinit
  @temp(l,k,f+3)
  BOX 0,0,l,k
  IF l<150 THEN
    @palaffiche
  ENDIF
  FOR h=0 TO l
    FOR hh=0 TO k
      pos(h,hh)=TRUNC(RAND(f*2.1+1)-f)
      IF pos(h,hh)>=2
        PSET h,hh,pos(h,hh)
      ENDIF
    NEXT hh
  NEXT h
  FOR hhh=0 TO n
    FOR h=1 TO l-1
      FOR hh=1 TO k-1
        pos1(h,hh)=pos(h,hh)+pos(h,hh-1)+pos(h,hh+1)+pos(h+1,hh)+pos(h-1,hh)+pos(h+1,hh-1)+pos(h+1,hh+1)+pos(h-1,hh-1)+pos(h-1,hh+1)
        IF pos1(h,hh)>3
          COLOR 1
          PLOT h,hh
        ENDIF
      NEXT hh
    NEXT h
    SWAP pos1(),pos()
  NEXT hhh
  FOR h=0 TO l
    FOR hh=0 TO k
      pos(h,hh)=pos(h,hh)/(8^n)
      pos2(h,hh)=pos(h,hh)
    NEXT hh
  NEXT h
  @ecart(l,k)
  REPEAT
    SOUND 1,15,#4000+RAND(10),0.1
    WAVE 1,10,15210,6500,1
  UNTIL STRIG(1)<>0
  SOUND 1,0,0,0
  SOUND 2,0,0,0
  SOUND 3,0,0,0
  @efface1
RETURN
