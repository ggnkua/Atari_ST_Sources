> PROCEDURE palinit
  LOCAL h
  IF palette=1 THEN
    FOR h=0 TO 15
      VSETCOLOR h,palette(h)
    NEXT h
  ELSE
    READ pal0
    FOR h&=0 TO 15
      READ a,b,c
      SETCOLOR h&,a,b,c
    NEXT h&
  ENDIF
RETURN
> PROCEDURE palmenu
  RESTORE pal
  FOR h&=0 TO 15
    READ a,b,c
    SETCOLOR h&,a,b,c
  NEXT h&
RETURN
> PROCEDURE palaffiche
  LOCAL h
  FOR h=0 TO 15
    COLOR 1
    DEFFILL h,2,8
    BOX 150+10*h,0,150+10*(h+1),31
    PBOX 151+10*h,1,149+10*(h+1),30
  NEXT h
RETURN
> PROCEDURE palette
  LOCAL h
  @efface1
  @palinit
  @palaffiche
  COLOR 1
  DEFTEXT 1,0,0,4
  LINE 0,40,320,40
  FOR h=2 TO 15
    COLOR 1
    BOX 20,40+8*h,50,48+8*h
    BOX 50,40+8*h,80,48+8*h
    BOX 80,40+8*h,120,48+8*h
    BOX 130,40+8*h,160,48+8*h
    TEXT 135,46+8*h,h
    aa=pal(h,0)
    bb=pal(h,1)
    cc=pal(h,2)
    @in(pal(h,0),25,40+8*h+6,2,0,"..",aa)
    @in(pal(h,1),55,40+8*h+6,2,0,"..",bb)
    @in(pal(h,2),85,40+8*h+6,2,0,"..",cc)
    pal(h,0)=aa
    pal(h,1)=bb
    pal(h,2)=cc
    palette(h)=pal(h,0)*256+pal(h,1)*16+pal(h,2)
    VSETCOLOR h,palette(h)
  NEXT h
  palette(1)=6*256
  REPEAT
  UNTIL STRIG(1)<>0
  palette=1
  @efface1
RETURN
