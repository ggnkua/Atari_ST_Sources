> PROCEDURE screen(a%)
  IF a%=1
    DIM adr%(9000)
    old%=XBIOS(2)
    pbase%=XBIOS(2)
    lbase%=V:adr%(0)
  ENDIF
  IF a%=2
    SWAP lbase%,pbase%
    VOID XBIOS(5,L:pbase%,L:lbase%,-1)
  ENDIF
  IF a%=0
    VOID XBIOS(5,L:old%,L:old%,-1)
    ERASE adr%()
  ENDIF
RETURN
