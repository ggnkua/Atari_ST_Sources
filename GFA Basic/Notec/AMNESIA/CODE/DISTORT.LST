.########################################
.### AMNESIA Distortion By GAIA/NOTEC ###
.########################################
.
CLEAR
RESERVE FRE(0)-(62*160+32+62*(80+16)*32)
INLINE dos%,32
super%=GEMDOS(32,L:super%)
xb%=XBIOS(2)
BMOVE &HFFFF8240,dos%,32
VSYNC
OUT 4,18
HIDEM
SPOKE &H484,2
VSYNC
.
@load
@decalage
@sin1
@dist
@fin
.
> PROCEDURE load
  .
  log%=MALLOC(62*160)
  stk%=MALLOC(62*(80+16)*32)
  pal%=MALLOC(32)
  .
  @degas("A:\GRAPHX\I_AMNDI2.PI1",log%,62*160)
  OPEN "I",#1,"A:\GRAPHX\I_AMNDI2.PI1"
  SEEK #1,2
  BGET #1,pal%,32
  CLOSE #1
  BMOVE pal%,&HFFFF8240,32
  VSYNC
  .
RETURN
> PROCEDURE decalage
  .
  adr%=0
  FOR x%=1 TO 32
    FOR y%=0 TO 61
      RC_COPY log%,0,y%,160,1 TO xb%,x%-1,0
      BMOVE xb%,stk%+adr%,96
      ADD adr%,96
      BMOVE xb%+160,xb%,96
    NEXT y%
  NEXT x%
  .
RETURN
> PROCEDURE dist
  .
  nbp%=nbp%
  nb%=0
  DO
    FOR nb%=0 TO nbp%-1
      FOR y%=0 TO 61
        px%=x%(nb%)
        pas%=px%*62*96+y%*96
        BMOVE stk%+pas%,xb%+y%*160,96
        INC nb%
      NEXT y%
      VSYNC
      EXIT IF PEEK(&HFFFFFC02)=57
    NEXT nb%
  LOOP UNTIL PEEK(&HFFFFFC02)=57
  .
RETURN
> PROCEDURE degas(nom$,adr%,len%)
  .
  OPEN "I",#1,nom$
  SEEK #1,34
  BGET #1,adr%,len%
  CLOSE #1
  .
RETURN
> PROCEDURE fin
  .
  BMOVE dos%,&HFFFF8240,32
  VSYNC
  OUT 4,8
  SHOWM
  SPOKE &H484,3
  VOID MFREE(log%)
  VOID MFREE(pal%)
  VOID MFREE(stk%)
  VOID GEMDOS(32,L:super%)
  EDIT
  .
RETURN
> PROCEDURE t0
  time%=TIMER
RETURN
> PROCEDURE t1
  PRINT "Time     : ";TIMER-time%
  PRINT "Secondes : ";(TIMER-time%)/200
RETURN
.
.### Les courbes ###
.
> PROCEDURE sin1
  .
  .71*62=points(4402)
  .
  DIM x%(4402)
  nbp%=4401
  v%=5
  a%=0
  aa%=0
  nb%=0
  FOR t%=0 TO 70
    a%=aa%
    FOR y%=0 TO 61
      x=16+15*COSQ(a%)
      x%(nb%)=x
      ADD a%,v%
      INC nb%
    NEXT y%
    ADD aa%,v%
  NEXT t%
  .
RETURN
> PROCEDURE sin2
  .
  .16*62=points(992)
  .
  FOR x=0 TO 15
    FOR y=0 TO 61 STEP 2
      PSET 15-x,y,1
    NEXT y
    FOR y=1 TO 61 STEP 2
      PSET 16+x,y,1
    NEXT y
    VSYNC
  NEXT x
  .
RETURN
.
