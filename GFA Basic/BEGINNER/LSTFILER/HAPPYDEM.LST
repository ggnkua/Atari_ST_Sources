PROCEDURE intro
  DIM r(16),g(16),b(16)
  FOR i%=0 TO 15
    SETCOLOR i%,0
  NEXT i%
  BLOAD "title.pi1",XBIOS(2)-34
  x%=XBIOS(2)-32
  FOR i%=0 TO 30 STEP 2
    a=PEEK(x%+i%)
    b=PEEK(x%+i%+1)
    c=INT(a/16)
    d=b-c*16
    r(i%/2)=a/8
    g(i%/2)=c/8
    b(i%/2)=d/8
  NEXT i%
  FOR i%=1 TO 8
    FOR j%=0 TO 15
      SETCOLOR j%,r(j%)*i%,g(j%)*i%,b(j%)*i%
    NEXT j%
    PAUSE 1
  NEXT i%
  VOID INP(2)
  FOR i%=8 DOWNTO 1
    FOR j%=15 DOWNTO 0
      SETCOLOR j%,r(j%)/i%,g(j%)/i%,b(j%)/i%
    NEXT j%
    PAUSE 1
  NEXT i%
  CLS
  SETCOLOR 0,5,5,5
  CLS
  DEFTEXT 2,0,5,101
  a$="THE SINNER "
  TEXT 10,50,a$
  PAUSE 80
  CLS
  DEFTEXT 3,0,15,106
  b$="IS PROUD "
  TEXT 10,50,b$
  PAUSE 80
  CLS
  DEFTEXT 5,0,20,109
  c$="TO PRESENT "
  TEXT 10,50,c$
  PAUSE 80
  CLS
  DEFTEXT 12,0,0,111
  d$="THE HAPPY DEMO"
  TEXT 10,50,d$
  PAUSE 80
RETURN
