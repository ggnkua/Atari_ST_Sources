> PROCEDURE slump
  CLS
  PRINT " Gissa ett tal mellan 1 och 1000"
  PRINT "jag ger ledtrÜdar"
  slumptal%=INT(RND*1000)+1
  a_g%=0
  REPEAT
    a_g%=a_g%+1
    INPUT "well";tal%
    IF tal%<slumptal%
      PRINT "sikta hîgre"
    ENDIF
    IF tal%>slumptal%
      PRINT "sikta lÑgre"
    ENDIF
  UNTIL tal%=slumptal% OR a_g%=12
  IF tal%=slumptal%
    PRINT "grattis du hittade talet pÜ ";a_g%;" gissningar"
  ENDIF
  IF a_g%=12 AND tal%/slumptal%
    PRINT " tyvÑr sÜ kunde du inte hitta talet som var ";slumptal%;
  ENDIF
  GOSUB slut
RETURN
