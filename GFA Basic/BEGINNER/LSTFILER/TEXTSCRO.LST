PROCEDURE intro
  text$=SPACE$(40)+"DETTA SLUMPTALS SPEL ŽR SKRIVET AV THE SINNER OCH SLŽPPT "
  text$=text$+"AV SPD. HOPPAS ATT NI TYCKER DET ŽR KUL. KODEN KAN NI F GENOM "
  text$=text$+"ATT SKICKA ETT BREV + EN DISK TILL SPD. LETS GO WRAPPING.........."
  text$=text$+SPACE$(40)
  a%=&H12
  adr%=VARPTR(a%)
  POKE adr%,&H12
  VOID XBIOS(25,1,L:adr%)
  REPEAT
    INC i%
    IF i%>LEN(text$)-70
      i%=1
    ENDIF
    PRINT AT(1,1);MID$(text$,i%,70)
    GET 0,0,600,8,scroll$
    FOR j%=1 TO 7
      PUT 0-j%,0,scroll$
    NEXT j%
  UNTIL LEN(INKEY$)
  POKE adr%,&H8
  VOID XBIOS(25,1,L:adr%)
RETURN
