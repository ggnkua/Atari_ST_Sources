CLS
@reformat_text(a$,76,1,4)
~INP(2)
PROCEDURE reformat_text(txt$,x%,y%,width%)
  LOCAL xa$,xa%,xb%
  REPEAT
    xa$=LEFT$(txt$,width%+1)
    xa%=RINSTR(xa$," ")
    IF xa%
      xb%=1
      xa$=LEFT$(xa$,xa%-1)
    ELSE
      xb%=0
      xa%=width%+1
      xa$=LEFT$(xa$,xa%-1)
    ENDIF
    IF txt$=xa$
      txt$=""
    ELSE
      IF xb%
        txt$=RIGHT$(txt$,LEN(txt$)-LEN(xa$)-1)
      ELSE
        txt$=RIGHT$(txt$,LEN(txt$)-LEN(xa$))
      ENDIF
    ENDIF
    PRINT AT(x%,y%);xa$;
    INC y%
  UNTIL txt$=""
RETURN
