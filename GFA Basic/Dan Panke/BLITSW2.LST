' Blitter Switcher 2.00  by C. Warren
$m2500
d%=1
ap_id&=APPL_INIT()
me_id&=MENU_REGISTER(ap_id&,"  Blit Switch")
DO
  ~EVNT_MESAG(0)
  IF MENU(1)=40
    ALERT 2,"Blitter Switch",d%," On | Off ",a%
    SELECT a%
    CASE 1
      r%=XBIOS(64,-1) AND 2      !r%=non zero if blitter attached
      IF r%
        ~XBIOS(64,1)
        d%=2
      ELSE
        ALERT 1,"Sorry, no blitter",1,"Shame!",dummy%
      ENDIF
    CASE 2
      ~XBIOS(64,0)
      d%=1
    ENDSELECT
  ENDIF
LOOP
