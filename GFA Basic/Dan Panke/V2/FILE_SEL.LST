PROCEDURE file_select(VAR file$)
  LOCAL xa$
  IF LEFT$(file$)<>"."
    file$=".*"
  ENDIF
  file$=CHR$(GEMDOS(25)+65)+":"+DIR$(0)+"\*"+file$
  FILESELECT file$,"",file$
  IF EXIST(file$)
    xa$=file$
    IF MID$(file$,2,1)=":"
      CHDRIVE LEFT$(file$,2)
      xa$=RIGHT$(file$,LEN(file$)-2)
    ENDIF
    CHDIR LEFT$(xa$,RINSTR(xa$,"\"))
  ENDIF
RETURN
