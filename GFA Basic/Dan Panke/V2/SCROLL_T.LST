PROCEDURE scroll_text(txt$,y%)
  LOCAL xa%,xb%,xc%,xd%,xa$
  xa%=40
  xb%=8
  IF XBIOS(4)
    xa%=80
    IF XBIOS(4)=2
      xb%=16
    ENDIF
  ENDIF
  IF y%>0 AND y%<25
    IF LEN(txt$)<xa%
      txt$=txt$+SPACE$(xa%-LEN(txt$))
    ENDIF
    REPEAT
      INC xc%
      PRINT AT(xa%,y%);MID$(txt$,xc%,1);
      FOR xd%=0 TO 7
        GET 1,y%*xb%-xb%,8*xa%-1,y%*xb%-1,xa$
        VSYNC
        PUT 0,y%*xb%-xb%,xa$
      NEXT xd%
      IF xc%=LEN(txt$)
        xc%=0
      ENDIF
    UNTIL LEN(INKEY$)
  ENDIF
RETURN
