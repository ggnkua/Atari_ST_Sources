'                                              Buffer fr Hintergrund (32*6+4)
INLINE bufadr%,196
'
GOSUB gfa_poppal__
palette$=lib_rv__$
GOSUB gfa_pload__("\EXAMPLES\STUFF\DEMO.PIC",XBIOS(2),2)
'
GET 0,208,31,239,shape$                      ! Shape in String einlesen
GET 0,272,31,303,mask$                       ! Maske in String einlesen
ALERT 2,"Demo mit |beliebiger|Taste abbrechen",1,"Start",button|
x&=0
y&=340
xi&=1
yi&=-1
HIDEM
REPEAT
  '
  GOSUB gfa_h_shap32__(x&,y&,0,32,XBIOS(2),bufadr%,V:shape$+6,V:mask$+6)
  '
  ADD x&,xi&
  ADD y&,yi&
  IF x&>607 OR x&<1
    MUL xi&,-1
  ENDIF
  IF y&>367 OR y&<300
    MUL yi&,-1
  ENDIF
  VSYNC
  '
  GOSUB gfa_h_shap32__(0,0,1,32,XBIOS(2),bufadr%,V:shape$+6,V:mask$+6)
  '
UNTIL INKEY$<>""
SHOWM
~XBIOS(6,L:V:palette$)
