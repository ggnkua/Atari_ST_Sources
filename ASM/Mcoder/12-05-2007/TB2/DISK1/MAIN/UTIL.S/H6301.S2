			Dc.b	$D7,$80			*B5	Joy	StaB	$80
			Dc.b	$86,$FE			*B7		LdaA	#$FE
			Dc.b	$97,$03			*B9		StaA	$03
			Dc.b	$4F			*BB		ClrA
			Dc.b	$97,$05			*BC		StaA	$05
			Dc.b	$96,$07			*BE		LdaA	$07
			Dc.b	$43			*C0		NotA
			Dc.b	$44			*C1		LsrA
			Dc.b	$44			*C2		LsrA
			Dc.b	$44			*C3		LsrA
			Dc.b	$44			*C4		LsrA
			Dc.b	$84,$0F			*C5		AndA	#$0F
			Dc.b	$7B,$04,$03		*C7		Bit	#$04,$03
			Dc.b	$26,$02			*CA		Bne	Out
			Dc.b	$8A,$80			*CC		OraA	#$80
