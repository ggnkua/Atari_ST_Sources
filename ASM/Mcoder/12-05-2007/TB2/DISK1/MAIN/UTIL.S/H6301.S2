			Dc.b	$DD,$84			*C5		StD	$84
			Dc.b	$86,$F9			*C7		LdaA	#$F9
			Dc.b	$97,$86			*C9		StaA	$86
			Dc.b	$CC,$00,$01		*CB		LdD	#$0001
