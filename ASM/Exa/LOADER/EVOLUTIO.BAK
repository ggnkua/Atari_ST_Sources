pmmu_off	macro
	pea	(a0)
	lea	save_pmmu(pc),a0
	pmove.l	tc,(a0)
	and.b	#%01111111,(a0)	;inactive la PMMU
	pmove.l	(a0),tc
	move.l	(sp)+,a0
	endm

pmmu_on		macro
	pea	(a0)
	lea	save_pmmu(pc),a0
	or.b	#$80,(a0)
	pmove.l	(a0),tc
	move.l	(sp)+,a0
	endm

