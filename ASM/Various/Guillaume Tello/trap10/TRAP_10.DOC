	trap #1
	addq.l #6,sp

	clr -(sp)	; et laisser la routine r‚sidente
	lea debut(pc),a0
	lea demarrage+256(pc),a1
	sub.l a0,a1
	move.l a1,-(sp)
	move #49,-(sp)
	trap #1		; et quitter

