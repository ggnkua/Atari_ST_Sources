a$="dies ist ein test"
TEXT 0,13,a$
s1%=&HE62FA952
@crypt(s1%,a$,*b$)
TEXT 0,30,b$
@crypt(s1%,b$,*c$)
TEXT 0,50,c$
PROCEDURE crypt(o1%,s$,d%)
  LOCAL d$,m%,h%,g%
  ' konstanten fÅr PSZZG
  ' zur schnelleren Berechnung
  m%=2^(23-1) !MSB
  h%=2^(9-1)  !zweites bit
  g%=m%+m%-1  !grîûte Zahl
  '
  l%=LEN(s$)
  d$=s$ !damit nicht zuviel stringmÅll entsteht
  FOR i%=1 TO l%
    ' "AND $FF" erfolgt automatisch
   MID$(d$,i%,1)=CHR$(ASC(MID$(s$,i%,1)) XOR o1%)
    o1%=@pszzg(o1%)
  NEXT i%
  *d%=d$
RETURN
' PSZZG mit schieben nach links
DEFFN pszzg(i%)=((i%+i%) AND g%)-((0<(i% AND m%)) XOR ((i% AND h%)>0))
