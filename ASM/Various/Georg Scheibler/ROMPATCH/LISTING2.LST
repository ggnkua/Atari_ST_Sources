' Programm zum Žndern der Datei DESKTOP.INF
' Mit dem Programm kann die Uhranzeige aus dem
' ROM-Patch vom 4.1.1990 beim RESET ein- bzw.
' ausgeschaltet werden
DIM a$(100)
OPEN "i",#1,"DESKTOP.INF"
WHILE LOF(#1)-LOC(#1)>2
  INC i%
  LINE INPUT #1,a$(i%)
  PRINT a$(i%)
  IF LEFT$(a$(i%),2)="#U"
    p%=i%
  ENDIF
WEND
CLOSE #1
al$="Uhr ber die Datei DESKTOP.INF|"
al$=al$+"einstellen.|"
al$=al$+"Die aktuelle Einstellung ist|"
IF p%=0
  al$=al$+"kein Eintrag vorhanden"
ELSE
  al$=al$+a$(p%)
  IF MID$(a$(p%),3,1)="1"
    al$=al$+" --> Uhr aus"
  ELSE
    al$=al$+" --> Uhr an"
  ENDIF
ENDIF
ALERT 1,al$,1," AN | AUS |abbruch",antwort%
IF antwort%<3
  IF p%=0
    INC i%
    p%=i%
  ENDIF
  a$(p%)="#U"+STR$(antwort%-1)
  OPEN "o",#1,"DESKTOP.INF"
  FOR j%=1 TO i%
    PRINT #1,a$(j%)
  NEXT j%
  PRINT #1,CHR$(26);
  CLOSE #1
ENDIF
