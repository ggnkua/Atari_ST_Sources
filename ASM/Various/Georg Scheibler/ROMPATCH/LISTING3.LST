PRINT "Programm zum Einfgen eines (mehrteiligen)"
PRINT "Patch in die Datei TOS.IMG"
PRINT "½ Georg Scheibler 15.12.1989"
FILESELECT "\*.prg","",n$
IF n$>" "
  OPEN "i",#1,n$
  SEEK #1,28
  n%=CVI(INPUT$(4,#1))
  IF n%>=0 !nur ein patch
    n%=-1
    SEEK #1,28
  ENDIF
  OPEN "u",#2,"romTOS.IMG"
  REPEAT
    @insert
    INC n%
  UNTIL n%=0
  SEEK #2,&H2D1DA
  PRINT #2," Patch vom ";DATE$'
  CLOSE #2
  CLOSE #1
ENDIF
PROCEDURE insert
  ol%=CVL(INPUT$(4,#1))
  l%=CVL(INPUT$(4,#1))
  p%=CVL(INPUT$(4,#1))
  a$=INPUT$(l%,#1)
  IF ol%>=l% THEN !genug platz fr neue Routine
    SEEK #2,p%
    PRINT #2,a$;
    IF ol%>l%
      PRINT #2,STRING$(ol%-l%,CHR$(255));
    ENDIF
    SEEK #2,&H2D1E0
    PRINT #2,DATE$;
  ELSE
    PRINT "die neue Routine ist ";l%-ol%;"Byte zu lang"
  ENDIF
RETURN
