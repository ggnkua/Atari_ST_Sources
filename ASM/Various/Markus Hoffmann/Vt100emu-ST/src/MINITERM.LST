> FUNCTION modemkapito(t$)
@modem0
~@to_modem(t$)
REPEAT
t$=@getmodem$(200*50)    ! Timeout nach 50 Sekunden
UNTIL t$="OK" OR t$="TIMEOUT" OR t$="ERROR" OR t$="+FCON" OR t$="CONNECT"
PRINT "######>GETMODEM:"'t$
IF t$="OK"
RETURN 0
ELSE IF t$="ERROR"
RETURN 1
ELSE IF t$="TIMEOUT"
RETURN 2
ELSE IF t$="+FCON"
RETURN 3
ELSE IF t$="CONNECT"
RETURN 4
ENDIF
RETURN -1
ENDFUNC
> FUNCTION modemresp(VAR t$)
inaux$=inaux$+INPAUX$
t$=inaux$
pos&=INSTR(inaux$,CHR$(13))
IF pos&
t$=LEFT$(inaux$,pos&-1)
IF LEFT$(t$)=CHR$(10)
t$=RIGHT$(t$,LEN(t$)-1)
ENDIF
inaux$=RIGHT$(inaux$,LEN(inaux$)-pos&)
IF LEN(t$)
RETURN 0
ELSE
RETURN -1
ENDIF
ELSE
t$=inaux$
RETURN -1
ENDIF
ENDFUNC
> FUNCTION to_modem(t$)
LOCAL i&
IF OUT?(modemport&)
PRINT "TO MODEM: <"+t$+">"
IF LEN(t$)
FOR i&=0 TO LEN(t$)-1
OUT modemport&,PEEK(V:t$+i&)
NEXT i&
ENDIF
OUT modemport&,13
RETURN 0
ELSE
RETURN -1
ENDIF
ENDFUNC
