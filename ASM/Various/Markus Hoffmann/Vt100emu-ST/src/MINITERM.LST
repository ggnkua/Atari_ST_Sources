> PROCEDURE savescreen
  LOCAL s$,t$,i&,j&
  FILESELECT "\*.TXT","screen.txt",s$
  IF LEN(s$)
    DEFMOUSE 2
    CLR t$
    FOR i&=0 TO 24
      FOR j&=0 TO 79
        a|=(PEEK(screenbuf%+4*j&+4*80*i&+3))
        IF a|
          t$=t$+CHR$(a|)
        ELSE
          t$=t$+" "
        ENDIF
      NEXT j&
      t$=t$+CHR$(13)+CHR$(10)
    NEXT i&
    BSAVE s$,V:t$,LEN(t$)
    DEFMOUSE 0
  ENDIF
RETURN
> FUNCTION input$(r$)         ! Allgemeine Texteingabefunktion
LOCAL t$
PRINT r$;                     ! Auf den Port ...
CLR exit!,print.zeilen&   ! Zeilenausgabe l”schen
i_zeit%=TIMER
DO
  IF INP?(kanal&)<>-1 AND INP?(kanal&)<>0
    exit!=TRUE
  ENDIF
  IF INP?(kanal&)
    a|=INP(kanal&)
    i_zeit%=TIMER
    SELECT a|
    CASE 8
      IF LEN(t$)
        t$=LEFT$(t$,LEN(t$)-1)
        OUT 2,8
      ELSE
        OUT 2,7
      ENDIF
    CASE 9
      t$=input.tab$
      PRINT CHR$(13)+r$+t$;
    CASE 13
      PRINT CHR$(13)+CHR$(10);
      exit!=TRUE
    DEFAULT
      IF a|<>ech|
        IF psw!
          OUT 2,ASC("*")
        ELSE IF upp!
          OUT 2,ASC(UPPER$(CHR$(a|)))
        ELSE
          OUT 2,a|
        ENDIF
      ENDIF
      t$=t$+CHR$(a|)
    ENDSELECT
  ENDIF
  EXIT IF exit!
LOOP
IF NOT psw!
  input.tab$=t$
ENDIF
RETURN t$
ENDFUNC
