	rts

******** REALTIME INIT SUBROUTINE ********

DemoFx.realtimeInit:
* Insert all realtime initialization here (i.e. usage of shared mem, etc.).
	rts

******** SCREENINIT SUBROUTINE ********

DemoFx.initScreen:
* Insert screenarea initialising, etc. in here!
	rts

******** MAINLOOP SUBROUTINE ********

DemoFx.mainLoop:
	move.l	frmcnt,d0
	sub.l	lastframecount,d0
	bne.s	.end_realtime_init
	move.l	d0,-(sp)
	bsr	DemoFx.realtimeInit
	move.l	(sp)+,d0
.end_realtime_init:
	cmpi.l	#3,d0
	bhs.s	.end_screeninit
	bsr	DemoFx.initScreen
.end_screeninit:

* Insert mainloop (possibly multiframe) operations here!

	IFEQ	testmode
	lea	scr,a0
	move.l	(a0)+,d0
	move.l	(a0)+,d1
	move.l	(a0),-4(a0)
	move.l	d0,(a0)
	move.l	d1,-8(a0)
	move.l	d0,d1
	lsr.w	#8,d0
	move.l	d0,$ffff8200.w
	move.b	d1,$ffff820d.w
	ENDC

	move.l	frmcnt,d0
	sub.l	lastframecount,d0
	bne.s	.res_done
	bsr	DemoFx.setRes
.res_done:

	rts

