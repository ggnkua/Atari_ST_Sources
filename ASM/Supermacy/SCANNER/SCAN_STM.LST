' OPEN "o",#99,"F:\stm_lst.txt"
DO
  FILESELECT #"DOSSIER ¶ SCANNER","\*.STM","",chem$
  EXIT IF chem$=""
  IF RIGHT$(chem$)<>"\"
    a%=RINSTR(chem$,"\")
    chem$=LEFT$(chem$,a%)
  ENDIF
  PRINT ''chem$
  ' PRINT #99,''chem$
  scan_stm
LOOP
' CLOSE #99
'
> PROCEDURE scan_stm
  ~FSETDTA(BASEPAGE+128)
  a%=FSFIRST(chem$+"*.STM",0)
  DO UNTIL a%
    nom$=CHAR{BASEPAGE+158}
    PRINT nom$;TAB(12);"|";
    ' PRINT #99,nom$;TAB(12);"|";
    titre_stm
    a%=FSNEXT()
  LOOP
RETURN
> PROCEDURE titre_stm
  LOCAL tit$
  OPEN "i",#1,chem$+nom$
  tit$=STRING$(21,0)
  BGET #1,V:tit$,20           ! song name: les 20 premiers octets du fichier
  tit$=CHAR{V:tit$}
  '
  PRINT tit$;TAB(33);"|";STR$(LOF(#1),7);"|"
  ' PRINT #99,tit$;TAB(33);"|";STR$(LOF(#1),7);"|"
  CLOSE #1
RETURN
