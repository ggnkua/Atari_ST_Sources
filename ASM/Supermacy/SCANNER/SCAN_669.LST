IF todisc!
  OPEN "o",#99,"F:\669_lst.txt"
ENDIF
DO
  FILESELECT #"DOSSIER ¶ SCANNER","\*.669","",chem$
  EXIT IF chem$=""
  IF RIGHT$(chem$)<>"\"
    a%=RINSTR(chem$,"\")
    chem$=LEFT$(chem$,a%)
  ENDIF
  PRINT ''chem$
  IF todisc!
    PRINT #99,''chem$
  ENDIF
  scan_669
LOOP
IF todisc!
  CLOSE #99
ENDIF
'
> PROCEDURE scan_669
  ~FSETDTA(BASEPAGE+128)
  a%=FSFIRST(chem$+"*.669",0)
  DO UNTIL a%
    nom$=CHAR{BASEPAGE+158}
    PRINT nom$;TAB(12);"|";
    IF todisc!
      PRINT #99,nom$;TAB(12);"|";
    ENDIF
    titre_669
    a%=FSNEXT()
  LOOP
RETURN
