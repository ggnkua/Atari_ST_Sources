' OPEN "o",#99,"F:\dtm_lst.txt"
DO
  FILESELECT #"DOSSIER ¶ SCANNER","\*.DTM","",chem$
  EXIT IF chem$=""
  IF RIGHT$(chem$)<>"\"
    a%=RINSTR(chem$,"\")
    chem$=LEFT$(chem$,a%)
  ENDIF
  PRINT ''chem$
  ' PRINT #99,''chem$
  scan_dtm
LOOP
' CLOSE #99
'
> PROCEDURE scan_dtm
  ~FSETDTA(BASEPAGE+128)
  a%=FSFIRST(chem$+"*.DTM",0)
  DO UNTIL a%
    nom$=CHAR{BASEPAGE+158}
    PRINT nom$;TAB(12);"|";
    ' PRINT #99,nom$;TAB(12);"|";
    titre_dtm
    a%=FSNEXT()
  LOOP
RETURN
> PROCEDURE titre_dtm
  LOCAL tit$,nbvoies|
  OPEN "i",#1,chem$+nom$
  '
  SEEK #1,22            ! on se place sur le song name
  tit$=STRING$(21,0)
  BGET #1,V:tit$,20     ! qui fait 20 char asciiz
  tit$=CHAR{V:tit$}
  '
  SEEK #1,195           ! on se place sur le nombre de voies
  nbvoies|=INP(#1)      ! (pas trŠs l‚gal comme methode... mais ‡a marche)
  '
  PRINT tit$;TAB(33);"|";STR$(LOF(#1),7);"|";STR$(nbvoies|,4);" |"
  ' PRINT #99,tit$;TAB(33);"|";STR$(LOF(#1),7);"|";STR$(nbvoies|,4);" |"
  CLOSE #1
RETURN
