' OPEN "o",#99,"F:\mtm_lst.txt"
DO
  FILESELECT #"DOSSIER ¶ SCANNER","\*.MTM","",chem$
  EXIT IF chem$=""
  IF RIGHT$(chem$)<>"\"
    a%=RINSTR(chem$,"\")
    chem$=LEFT$(chem$,a%)
  ENDIF
  PRINT ''chem$
  ' PRINT #99,''chem$
  scan_mtm
LOOP
' CLOSE #99
'
> PROCEDURE scan_mtm
  ~FSETDTA(BASEPAGE+128)
  a%=FSFIRST(chem$+"*.MTM",0)
  DO UNTIL a%
    nom$=CHAR{BASEPAGE+158}
    PRINT nom$;TAB(12);"|";
    ' PRINT #99,nom$;TAB(12);"|";
    titre_mtm
    a%=FSNEXT()
  LOOP
RETURN
> PROCEDURE titre_mtm
  LOCAL tit$,nbvoies|
  tit$=STRING$(21,0)
  OPEN "i",#1,chem$+nom$
  SEEK #1,4          ! on se place sur le song name, aprŠs le header Id.
  BGET #1,V:tit$,20
  tit$=CHAR{V:tit$}
  '
  SEEK #1,33         ! on se place sur l'octet du nombre de voies
  nbvoies|=INP(#1)
  '
  PRINT tit$;TAB(33);"|";STR$(LOF(#1),7);"|";STR$(nbvoies|,4);" |"
  ' PRINT #99,tit$;TAB(33);"|";STR$(LOF(#1),7);"|";STR$(nbvoies|,4);" |"
  CLOSE #1
RETURN
