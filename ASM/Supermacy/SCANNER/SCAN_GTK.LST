' OPEN "o",#99,"F:\gtk_lst.txt"
DO
  FILESELECT #"DOSSIER ¶ SCANNER","\*.GTK","",chem$
  EXIT IF chem$=""
  IF RIGHT$(chem$)<>"\"
    a%=RINSTR(chem$,"\")
    chem$=LEFT$(chem$,a%)
  ENDIF
  PRINT ''chem$
  ' PRINT #99,''chem$
  scan_gtk
LOOP
' CLOSE #99
'
> PROCEDURE scan_gtk
  ~FSETDTA(BASEPAGE+128)
  a%=FSFIRST(chem$+"*.GTK",0)
  DO UNTIL a%
    nom$=CHAR{BASEPAGE+158}
    PRINT nom$;TAB(12);"|";
    ' PRINT #99,nom$;TAB(12);"|";
    titre_gtk
    a%=FSNEXT()
  LOOP
RETURN
> PROCEDURE titre_gtk
  LOCAL tit$,nbvoies|
  OPEN "i",#1,chem$+nom$
  SEEK #1,4          ! on se place sur le song name, aprŠs le header Id.
  tit$=STRING$(33,0)
  BGET #1,V:tit$,32     ! le song name fait 32 caractŠres, normalement sans
  tit$=CHAR{V:tit$}     ! z‚ro final, mais on fait comme si...
  '
  SEEK #1,200         ! on se place sur le mot du nombre de voies
  nbvoies|=INP&(#1)
  '
  PRINT tit$;TAB(45);"|";STR$(LOF(#1),7);"|";STR$(nbvoies|,4);" |"
  ' PRINT #99,tit$;TAB(45);"|";STR$(LOF(#1),7);"|";STR$(nbvoies|,4);" |"
  CLOSE #1
RETURN
