CONST NDC = 0;
      RC  = 2;

      MaxWorkIn  = 103; (* GEM/3 *)
      MaxWorkOut =  57;

      Screen   = 1;
      Plotter  = 11;
      Printer  = 21;
      Metafile = 31;
      Camera   = 41;
      Tablet   = 51;
      Memory   = 61;
      Image    = 91;

      OWFile     = 0;
      OWSerial   = 1;
      QWParallel = 2;
      OWDevice   = 3;
      OWNoChange = 255;

      OWLetter1  = 0;
      OWHalf     = 5;
      OWB5       = 10;
      OWLetter2  = 20;
      OWA4       = 30;
      OWLegal    = 40;
      OWDouble   = 50;
      OWBroad    = 55;
      OWIndirect = 255;

PROCEDURE VOpnWk(VAR WorkIn : ARRAY OF UNSIGNEDWORD;
                     MaxX   : XY;
                     MaxY   : XY;
                 VAR Handle : UNSIGNEDWORD;
                 VAR WorkOut: ARRAY OF UNSIGNEDWORD;
                 VAR Buffer : MFDB);

(* [V]DI: [Cl]o[s]e [W]or[k]station ****************************************)

PROCEDURE VClsWk(VAR Handle: UNSIGNEDWORD);

