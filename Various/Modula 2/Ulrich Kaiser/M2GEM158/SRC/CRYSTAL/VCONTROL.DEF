DEFINITION MODULE VControl;

(*
VDI Control Functions.

UK __DATE__ __TIME__
*)

(*DEF_SWITCHES*)

FROM PORTAB IMPORT ANYPOINTER,UNSIGNEDWORD,SIGNEDWORD,ANYBYTE;
FROM VDI    IMPORT MFDB,XY;

#if ST
PROCEDURE NOTVQGDOS(): BOOLEAN;
