(* [V]DI: [Q]uery [Scr]ee[n] [Info]rmation *********************************)

PROCEDURE VQScrnInfo(    Handle : UNSIGNEDWORD;
                     VAR WorkOut: ARRAY OF UNSIGNEDWORD);

END VControl.
