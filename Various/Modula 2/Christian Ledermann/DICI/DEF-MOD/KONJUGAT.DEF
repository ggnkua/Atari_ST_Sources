DEFINITION MODULE Konjugation;

TYPE DiePerson = RECORD 
		   Stamm, 
                   Endung : ARRAY [0..23] OF CHAR; 
                END(*RECORD*);

TYPE Vokabel = RECORD
		  Portugiesisch,
		  Deutsch, 
		  Zeit           : ARRAY [0..31] OF CHAR;
		  
		  Endung         : ARRAY [0..3] OF CHAR;
		  CASE: BOOLEAN OF
		       TRUE : 
		       PersonSingular : ARRAY [1..3] OF 
		                        DiePerson;
		       PersonPlural   : ARRAY [1..3] OF 
		                        DiePerson;                      
		   | FALSE:
		       Person         : ARRAY [1..6] OF 
		                         DiePerson;                      
		   END(*CASE*);                      
		  MaxLen	 : CARDINAL;
		END(*RECORD*);                        		  
		
PROCEDURE SetVokabel(Deutsch, Portugiesisch : ARRAY OF CHAR;
			VAR DieVokabel : Vokabel);		  
PROCEDURE MaxLength(DieVokabel: Vokabel): CARDINAL;			

END Konjugation.	  